<style>
  .footer {
    background: #2C1810;
    color: #F5F1E8;
    padding: 3rem 0 1rem;
    margin-top: 4rem;
  }
  
  .footer-content {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    margin-bottom: 2rem;
  }
  
  .footer-logo {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 1rem;
  }
  
  .footer-logo-icon {
    width: 40px;
    height: 40px;
    background: #F5F1E8;
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 2px solid #8B4513;
  }
  
  .footer-logo-text {
    display: flex;
    flex-direction: column;
    line-height: 1.2;
  }
  
  .footer-logo-main {
    color: #F5F1E8;
    font-size: 1.1rem;
    font-weight: 700;
    font-family: 'Playfair Display', serif;
  }
  
  .footer-logo-sub {
    color: #E8B86D;
    font-size: 0.8rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }
  
  .footer-section h3,
  .footer-section h4 {
    margin-bottom: 1rem;
    color: #F5F1E8;
  }
  
  .footer-section p {
    color: #E8B86D;
    line-height: 1.6;
    margin-bottom: 1rem;
  }
  
  .footer-section ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .footer-section ul li {
    margin-bottom: 0.5rem;
  }
  
  .footer-section ul li a {
    color: #E8B86D;
    text-decoration: none;
    transition: color 0.3s ease;
  }
  
  .footer-section ul li a:hover {
    color: #F5F1E8;
  }
  
  .social-links {
    display: flex;
    gap: 1rem;
    margin-top: 1rem;
  }
  
  .social-links a {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background: #8B4513;
    border-radius: 50%;
    color: #F5F1E8;
    text-decoration: none;
    transition: all 0.3s ease;
  }
  
  .social-links a:hover {
    background: #A0522D;
    color: #F5F1E8;
    transform: translateY(-2px);
  }
  
  .footer-bottom {
    border-top: 1px solid #8B4513;
    padding-top: 2rem;
  }
  
  .footer-bottom-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
  }
  
  .footer-bottom p {
    color: #E8B86D;
    margin: 0;
  }
  
  .footer-links {
    display: flex;
    gap: 2rem;
  }
  
  .footer-links a {
    color: #E8B86D;
    text-decoration: none;
    font-size: 0.9rem;
    transition: color 0.3s ease;
  }
  
  .footer-links a:hover {
    color: #F5F1E8;
  }
  
  @media (max-width: 768px) {
    .footer-bottom-content {
      flex-direction: column;
      text-align: center;
    }
    
    .footer-links {
      justify-content: center;
    }
  }
</style>
