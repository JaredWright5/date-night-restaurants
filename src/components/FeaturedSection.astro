---
import FeaturedRestaurant from './FeaturedRestaurant.astro';
import { getFeaturedRestaurants } from '@/data/featured';

const featuredRestaurants = getFeaturedRestaurants(3);
---

<section class="featured-section">
  <div class="container">
    <div class="section-header">
      <div class="header-content">
        <h2>Featured Date Night Restaurants</h2>
        <p>Premium romantic dining experiences handpicked for special occasions</p>
      </div>
      <div class="header-badge">
        <span class="badge-icon">âœ¨</span>
        <span>Premium Partners</span>
      </div>
    </div>
    
    <div class="featured-grid">
      {featuredRestaurants.map((restaurant, index) => (
        <FeaturedRestaurant 
          restaurant={restaurant} 
          tier={restaurant.featuredTier}
        />
      ))}
    </div>
    
    <div class="featured-footer">
      <div class="partnership-info">
        <h3>Partner with LA Date Night</h3>
        <p>Get featured in our premium section and reach thousands of couples looking for the perfect date night experience.</p>
        <div class="partnership-benefits">
          <div class="benefit">
            <i class="fas fa-eye"></i>
            <span>Premium Visibility</span>
          </div>
          <div class="benefit">
            <i class="fas fa-chart-line"></i>
            <span>Increased Bookings</span>
          </div>
          <div class="benefit">
            <i class="fas fa-star"></i>
            <span>Enhanced Credibility</span>
          </div>
        </div>
        <a href="/partnership/" class="btn btn-partnership">
          <i class="fas fa-handshake"></i>
          Become a Partner
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  .featured-section {
    padding: 80px 0;
    background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    position: relative;
    overflow: hidden;
  }
  
  .featured-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="hearts" width="20" height="20" patternUnits="userSpaceOnUse"><circle cx="10" cy="10" r="2" fill="%23d63384" opacity="0.1"/></pattern></defs><rect width="100" height="100" fill="url(%23hearts)"/></svg>');
    opacity: 0.3;
  }
  
  .section-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 3rem;
    position: relative;
    z-index: 2;
  }
  
  .header-content h2 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    color: #333;
    font-weight: 700;
  }
  
  .header-content p {
    font-size: 1.1rem;
    color: #666;
    margin: 0;
  }
  
  .header-badge {
    background: linear-gradient(45deg, #d63384, #ff6b6b);
    color: white;
    padding: 1rem 2rem;
    border-radius: 25px;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-weight: 600;
    box-shadow: 0 4px 15px rgba(214, 51, 132, 0.3);
  }
  
  .badge-icon {
    font-size: 1.2rem;
  }
  
  .featured-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    gap: 2rem;
    margin-bottom: 4rem;
    position: relative;
    z-index: 2;
  }
  
  .featured-footer {
    background: white;
    border-radius: 20px;
    padding: 3rem;
    box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    position: relative;
    z-index: 2;
  }
  
  .partnership-info {
    text-align: center;
  }
  
  .partnership-info h3 {
    font-size: 2rem;
    margin-bottom: 1rem;
    color: #333;
  }
  
  .partnership-info p {
    font-size: 1.1rem;
    color: #666;
    margin-bottom: 2rem;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }
  
  .partnership-benefits {
    display: flex;
    justify-content: center;
    gap: 2rem;
    margin-bottom: 2rem;
    flex-wrap: wrap;
  }
  
  .benefit {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 1rem 1.5rem;
    background: #f8f9fa;
    border-radius: 15px;
    font-weight: 500;
    color: #333;
  }
  
  .benefit i {
    color: #d63384;
    font-size: 1.1rem;
  }
  
  .btn-partnership {
    background: linear-gradient(45deg, #d63384, #ff6b6b);
    color: white;
    padding: 1rem 2rem;
    border-radius: 25px;
    text-decoration: none;
    font-weight: 600;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(214, 51, 132, 0.3);
  }
  
  .btn-partnership:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(214, 51, 132, 0.4);
  }
  
  @media (max-width: 768px) {
    .section-header {
      flex-direction: column;
      gap: 1rem;
      text-align: center;
    }
    
    .header-content h2 {
      font-size: 2rem;
    }
    
    .featured-grid {
      grid-template-columns: 1fr;
    }
    
    .partnership-benefits {
      flex-direction: column;
      align-items: center;
    }
    
    .benefit {
      width: 100%;
      max-width: 300px;
      justify-content: center;
    }
  }
  
  @media (max-width: 480px) {
    .featured-section {
      padding: 60px 0;
    }
    
    .header-content h2 {
      font-size: 1.75rem;
    }
    
    .featured-footer {
      padding: 2rem;
    }
    
    .partnership-info h3 {
      font-size: 1.5rem;
    }
  }
</style>
