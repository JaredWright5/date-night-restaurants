// to populate the featured restaurants from localStorage
---

<section class="featured-section">
  <div class="container">
    <div class="section-header">
      <div class="header-content">
        <h2>Featured Date Night Restaurants</h2>
        <p>Premium romantic dining experiences handpicked for special occasions</p>
      </div>
      <div class="header-badge">
        <span class="badge-icon">✨</span>
        <span>Premium Partners</span>
      </div>
    </div>
    
    <div class="featured-grid" id="featured-grid">
      <!-- Content will be dynamically loaded here by client-side JS -->
      <!-- Placeholder for initial load -->
      <div class="featured-card-placeholder"></div>
      <div class="featured-card-placeholder"></div>
      <div class="featured-card-placeholder"></div>
      <div class="featured-card-placeholder"></div>
    </div>
  </div>
</section>

<style>
  .featured-section {
    padding: 80px 0;
    background: #F4E4BC;
    position: relative;
    overflow: hidden;
    border-top: 3px solid #E8B86D;
    border-bottom: 3px solid #E8B86D;
  }
  
  .featured-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="hearts" width="20" height="20" patternUnits="userSpaceOnUse"><circle cx="10" cy="10" r="2" fill="%23d63384" opacity="0.1"/></pattern></defs><rect width="100" height="100" fill="url(%23hearts)"/></svg>');
    opacity: 0.3;
  }
  
  .section-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 3rem;
    position: relative;
    z-index: 2;
  }
  
  .header-content h2 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    color: #3E2723;
    font-weight: 700;
  }
  
  .header-content p {
    font-size: 1.1rem;
    color: #8B4513;
    margin: 0;
  }
  
  .header-badge {
    background: #D2691E;
    color: #FFF8F0;
    padding: 1rem 2rem;
    border-radius: 25px;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-weight: 600;
    box-shadow: 0 4px 15px rgba(210, 105, 30, 0.4);
  }
  
  .badge-icon {
    font-size: 1.2rem;
  }
  
  .featured-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    gap: 2rem;
    position: relative;
    z-index: 2;
    align-items: stretch;
  }

  .featured-card-placeholder {
    background: #e0e0e0;
    border-radius: 15px;
    height: 250px; /* Approximate height of a featured card */
    animation: pulse 1.5s infinite ease-in-out;
  }

  @keyframes pulse {
    0% { opacity: 0.7; }
    50% { opacity: 1; }
    100% { opacity: 0.7; }
  }
  
  @media (max-width: 768px) {
    .section-header {
      flex-direction: column;
      gap: 1rem;
      text-align: center;
    }
    
    .header-content h2 {
      font-size: 2rem;
    }
    
    .featured-grid {
      grid-template-columns: 1fr;
    }
  }
  
  @media (max-width: 480px) {
    .featured-section {
      padding: 60px 0;
    }
    
    .header-content h2 {
      font-size: 1.75rem;
    }
  }
</style>

