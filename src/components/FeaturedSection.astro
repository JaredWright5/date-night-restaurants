  // Load featured restaurants from localStorage and update the display
  document.addEventListener('DOMContentLoaded', () => {
    const featuredGrid = document.querySelector('.featured-grid');
    if (!featuredGrid) return;

    // Get saved featured restaurants from localStorage
    const savedFeatured = localStorage.getItem('featuredRestaurants');
    if (!savedFeatured) {
      console.log('No featured restaurants saved, using default');
      return;
    }

    try {
      const featuredSlugs = JSON.parse(savedFeatured);
      console.log('Loading featured restaurants from localStorage:', featuredSlugs);

      // Clear existing content
      featuredGrid.innerHTML = '';

      // Create featured cards for each restaurant with real data
      featuredSlugs.forEach((slug, index) => {
        const restaurant = restaurantData[slug];
        if (!restaurant) {
          console.warn('Restaurant data not found for:', slug);
          return;
        }

        const priceSymbols = '$'.repeat(restaurant.priceLevel);
        const mainImage = restaurant.photos[0] || 'https://images.unsplash.com/photo-1414235077428-338989a2e8c0?w=800&h=600&fit=crop';
        const cuisineText = restaurant.cuisineTypes.join(', ');

        const restaurantCard = document.createElement('a');
        restaurantCard.href = `/losangeles/${slug}/`;
        restaurantCard.className = 'featured-card-link';
        restaurantCard.style.cssText = `
          display: block;
          text-decoration: none;
          color: inherit;
          transition: transform 0.3s ease;
        `;
        
        restaurantCard.innerHTML = `
          <div class="featured-card featured-premium" style="
            background: #FFF8F0;
            border-radius: 20px;
            overflow: hidden;
            box-shadow: 0 10px 30px rgba(232, 184, 109, 0.2);
            transition: all 0.3s ease;
            position: relative;
            border: 3px solid #9CAF88;
            height: 100%;
            display: flex;
            flex-direction: column;
          ">
            <div class="featured-badge" style="
              position: absolute;
              bottom: 1rem;
              left: 1rem;
              background: #9CAF88;
              color: white;
              padding: 0.5rem 1rem;
              border-radius: 20px;
              display: flex;
              align-items: center;
              gap: 0.5rem;
              font-weight: 600;
              font-size: 0.9rem;
              z-index: 10;
              box-shadow: 0 4px 15px rgba(0,0,0,0.2);
