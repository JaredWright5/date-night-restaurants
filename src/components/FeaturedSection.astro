---
import FeaturedRestaurant from './FeaturedRestaurant.astro';
import { getFeaturedRestaurants } from '@/data/featured';

const featuredRestaurants = getFeaturedRestaurants(4);
---

<section class="featured-section">
  <div class="container">
    <div class="section-header">
      <div class="header-content">
        <h2>Featured Date Night Restaurants</h2>
        <p>Premium romantic dining experiences handpicked for special occasions</p>
      </div>
      <div class="header-badge">
        <span class="badge-icon">✨</span>
        <span>Premium Partners</span>
      </div>
    </div>
    
    <div class="featured-grid">
      {featuredRestaurants.map((restaurant, index) => (
        <FeaturedRestaurant 
          restaurant={restaurant} 
          tier={restaurant.featuredTier}
        />
      ))}
    </div>
  </div>
</section>

<style>
  .featured-section {
    padding: 80px 0;
    background: #F4E4BC;
    position: relative;
    overflow: hidden;
    border-top: 3px solid #E8B86D;
    border-bottom: 3px solid #E8B86D;
  }
  
  .featured-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="hearts" width="20" height="20" patternUnits="userSpaceOnUse"><circle cx="10" cy="10" r="2" fill="%23d63384" opacity="0.1"/></pattern></defs><rect width="100" height="100" fill="url(%23hearts)"/></svg>');
    opacity: 0.3;
  }
  
  .section-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 3rem;
    position: relative;
    z-index: 2;
  }
  
  .header-content h2 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    color: #3E2723;
    font-weight: 700;
  }
  
  .header-content p {
    font-size: 1.1rem;
    color: #8B4513;
    margin: 0;
  }
  
  .header-badge {
    background: #D2691E;
    color: #FFF8F0;
    padding: 1rem 2rem;
    border-radius: 25px;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-weight: 600;
    box-shadow: 0 4px 15px rgba(210, 105, 30, 0.4);
  }
  
  .badge-icon {
    font-size: 1.2rem;
  }
  
  .featured-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    gap: 2rem;
    position: relative;
    z-index: 2;
    align-items: stretch;
  }
  
  @media (max-width: 768px) {
    .section-header {
      flex-direction: column;
      gap: 1rem;
      text-align: center;
    }
    
    .header-content h2 {
      font-size: 2rem;
    }
    
    .featured-grid {
      grid-template-columns: 1fr;
    }
  }
  
  @media (max-width: 480px) {
    .featured-section {
      padding: 60px 0;
    }
    
    .header-content h2 {
      font-size: 1.75rem;
    }
  }
</style>

<script is:inline>
  // Load featured restaurants from localStorage and update the display
  document.addEventListener('DOMContentLoaded', () => {
    const featuredGrid = document.querySelector('.featured-grid');
    if (!featuredGrid) return;

    // Get saved featured restaurants from localStorage
    const savedFeatured = localStorage.getItem('featuredRestaurants');
    if (!savedFeatured) {
      console.log('No featured restaurants saved, using default');
      return;
    }

    try {
      const featuredSlugs = JSON.parse(savedFeatured);
      console.log('Loading featured restaurants from localStorage:', featuredSlugs);

      // Clear existing content
      featuredGrid.innerHTML = '';

      // Create featured cards for each restaurant
      featuredSlugs.forEach((slug, index) => {
        // Create a featured card that matches the design
        const restaurantCard = document.createElement('div');
        restaurantCard.className = 'featured-card featured-premium';
        restaurantCard.style.cssText = `
          background: white;
          border-radius: 15px;
          box-shadow: 0 8px 32px rgba(0,0,0,0.1);
          overflow: hidden;
          border: 2px solid #D4AF37;
          position: relative;
          transition: transform 0.3s ease, box-shadow 0.3s ease;
        `;
        
        restaurantCard.innerHTML = `
          <div style="padding: 2rem; text-align: center;">
            <div style="background: #D4AF37; color: white; padding: 0.5rem 1rem; border-radius: 20px; display: inline-block; margin-bottom: 1rem; font-weight: 600;">
              ✨ Featured
            </div>
            <h3 style="margin: 0 0 0.5rem 0; color: #3E2723; font-size: 1.5rem;">${slug.replace(/-/g, ' ').replace(/\b\w/g, l => l.toUpperCase())}</h3>
            <p style="color: #666; margin: 0 0 1rem 0;">Featured Restaurant</p>
            <a href="/losangeles/${slug}/" style="
              background: #D4AF37;
              color: white;
              padding: 0.75rem 1.5rem;
              border-radius: 25px;
              text-decoration: none;
              font-weight: 600;
              display: inline-block;
              transition: background 0.3s ease;
            " onmouseover="this.style.background='#B8941F'" onmouseout="this.style.background='#D4AF37'">
              View Restaurant
            </a>
          </div>
        `;
        
        featuredGrid.appendChild(restaurantCard);
      });

      console.log('Updated featured section with', featuredSlugs.length, 'restaurants');
    } catch (error) {
      console.error('Error loading featured restaurants:', error);
    }
  });
</script>
