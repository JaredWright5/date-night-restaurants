---
import FeaturedRestaurant from './FeaturedRestaurant.astro';
import { getFeaturedRestaurants } from '@/data/featured';

const featuredRestaurants = getFeaturedRestaurants(4);
---

<section class="featured-section">
  <div class="container">
    <div class="section-header">
      <div class="header-content">
        <h2>Featured Date Night Restaurants</h2>
        <p>Premium romantic dining experiences handpicked for special occasions</p>
      </div>
      <div class="header-badge">
        <span class="badge-icon">âœ¨</span>
        <span>Premium Partners</span>
      </div>
    </div>
    
    <div class="featured-grid">
      {featuredRestaurants.map((restaurant, index) => (
        <FeaturedRestaurant 
          restaurant={restaurant} 
          tier={restaurant.featuredTier}
        />
      ))}
    </div>
  </div>
</section>

<style>
  .featured-section {
    padding: 80px 0;
    background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    position: relative;
    overflow: hidden;
  }
  
  .featured-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="hearts" width="20" height="20" patternUnits="userSpaceOnUse"><circle cx="10" cy="10" r="2" fill="%23d63384" opacity="0.1"/></pattern></defs><rect width="100" height="100" fill="url(%23hearts)"/></svg>');
    opacity: 0.3;
  }
  
  .section-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 3rem;
    position: relative;
    z-index: 2;
  }
  
  .header-content h2 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    color: #333;
    font-weight: 700;
  }
  
  .header-content p {
    font-size: 1.1rem;
    color: #666;
    margin: 0;
  }
  
  .header-badge {
    background: linear-gradient(45deg, #d63384, #ff6b6b);
    color: white;
    padding: 1rem 2rem;
    border-radius: 25px;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-weight: 600;
    box-shadow: 0 4px 15px rgba(214, 51, 132, 0.3);
  }
  
  .badge-icon {
    font-size: 1.2rem;
  }
  
  .featured-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    gap: 2rem;
    position: relative;
    z-index: 2;
  }
  
  @media (max-width: 768px) {
    .section-header {
      flex-direction: column;
      gap: 1rem;
      text-align: center;
    }
    
    .header-content h2 {
      font-size: 2rem;
    }
    
    .featured-grid {
      grid-template-columns: 1fr;
    }
  }
  
  @media (max-width: 480px) {
    .featured-section {
      padding: 60px 0;
    }
    
    .header-content h2 {
      font-size: 1.75rem;
    }
  }
</style>
