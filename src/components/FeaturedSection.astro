---
// This component now renders only placeholders and relies entirely on client-side JavaScript
// to populate the featured restaurants from localStorage
---

<section class="featured-section">
  <div class="container">
    <div class="section-header">
      <div class="header-content">
        <h2>Featured Date Night Restaurants</h2>
        <p>Premium romantic dining experiences handpicked for special occasions</p>
      </div>
      <div class="header-badge">
        <span class="badge-icon">✨</span>
        <span>Premium Partners</span>
      </div>
    </div>
    
    <div class="featured-grid" id="featured-grid">
      <!-- Content will be dynamically loaded here by client-side JS -->
      <!-- Placeholder for initial load -->
      <div class="featured-card-placeholder"></div>
      <div class="featured-card-placeholder"></div>
      <div class="featured-card-placeholder"></div>
      <div class="featured-card-placeholder"></div>
    </div>
  </div>
</section>

<style>
  .featured-section {
    padding: 80px 0;
    background: #F4E4BC;
    position: relative;
    overflow: hidden;
    border-top: 3px solid #E8B86D;
    border-bottom: 3px solid #E8B86D;
  }
  
  .featured-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="hearts" width="20" height="20" patternUnits="userSpaceOnUse"><circle cx="10" cy="10" r="2" fill="%23d63384" opacity="0.1"/></pattern></defs><rect width="100" height="100" fill="url(%23hearts)"/></svg>');
    opacity: 0.3;
  }
  
  .section-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 3rem;
    position: relative;
    z-index: 2;
  }
  
  .header-content h2 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    color: #3E2723;
    font-weight: 700;
  }
  
  .header-content p {
    font-size: 1.1rem;
    color: #8B4513;
    margin: 0;
  }
  
  .header-badge {
    background: #D2691E;
    color: #FFF8F0;
    padding: 1rem 2rem;
    border-radius: 25px;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-weight: 600;
    box-shadow: 0 4px 15px rgba(210, 105, 30, 0.4);
  }
  
  .badge-icon {
    font-size: 1.2rem;
  }
  
  .featured-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    gap: 2rem;
    position: relative;
    z-index: 2;
    align-items: stretch;
  }

  .featured-card-placeholder {
    background: #e0e0e0;
    border-radius: 15px;
    height: 250px; /* Approximate height of a featured card */
    animation: pulse 1.5s infinite ease-in-out;
  }

  @keyframes pulse {
    0% { opacity: 0.7; }
    50% { opacity: 1; }
    100% { opacity: 0.7; }
  }
  
  @media (max-width: 768px) {
    .section-header {
      flex-direction: column;
      gap: 1rem;
      text-align: center;
    }
    
    .header-content h2 {
      font-size: 2rem;
    }
    
    .featured-grid {
      grid-template-columns: 1fr;
    }
  }
  
  @media (max-width: 480px) {
    .featured-section {
      padding: 60px 0;
    }
    
    .header-content h2 {
      font-size: 1.75rem;
    }
  }
</style>

    <script is:inline>
      // Function to fetch restaurant data from Supabase API
      async function fetchRestaurantData() {
        try {
          const response = await fetch('/api/restaurants');
          const data = await response.json();
          
          if (data.error) {
            console.warn('API error:', data.error);
            return {};
          }
          
          // Create a lookup object by slug
          const restaurantLookup = {};
          data.restaurants.forEach(restaurant => {
            restaurantLookup[restaurant.slug] = {
              name: restaurant.name,
              slug: restaurant.slug,
              dateNightScore: restaurant.dateNightScore,
              rating: restaurant.rating,
              priceLevel: restaurant.priceLevel,
              cuisineTypes: restaurant.cuisineTypes,
              area: restaurant.neighborhood || extractAreaFromAddress(restaurant.address),
              photos: restaurant.photos,
              address: restaurant.address
            };
          });
          
          return restaurantLookup;
        } catch (error) {
          console.error('Error fetching restaurant data from Supabase:', error);
          return {};
        }
      }
      
      // Helper function to extract area from address
      function extractAreaFromAddress(address) {
        const parts = address.split(',');
        if (parts.length >= 2) {
          return parts[1].trim();
        }
        return 'Los Angeles';
      }

  // Load featured restaurants from localStorage and update the display
  document.addEventListener('DOMContentLoaded', async () => {
    const featuredGrid = document.querySelector('.featured-grid');
    if (!featuredGrid) return;

    // Get saved featured restaurants from localStorage
    const savedFeatured = localStorage.getItem('featuredRestaurants');
    if (!savedFeatured) {
      console.log('No featured restaurants saved, using default');
      return;
    }

    try {
      const featuredSlugs = JSON.parse(savedFeatured);
      console.log('Loading featured restaurants from localStorage:', featuredSlugs);

      // Fetch restaurant data from JSON file
      const restaurantData = await fetchRestaurantData();
      console.log('Fetched restaurant data:', restaurantData);

      // Clear existing content
      featuredGrid.innerHTML = '';

      // Create featured cards for each restaurant with real data
      featuredSlugs.forEach((slug, index) => {
        const restaurant = restaurantData[slug];
        if (!restaurant) {
          console.warn('Restaurant data not found for:', slug);
          return;
        }

        const priceSymbols = '$'.repeat(restaurant.priceLevel);
        const mainImage = restaurant.photos[0] || 'https://images.unsplash.com/photo-1414235077428-338989a2e8c0?w=800&h=600&fit=crop';
        const cuisineText = restaurant.cuisineTypes.join(', ');

        const restaurantCard = document.createElement('a');
        restaurantCard.href = `/losangeles/${slug}/`;
        restaurantCard.className = 'featured-card-link';
        restaurantCard.style.cssText = `
          display: block;
          text-decoration: none;
          color: inherit;
          transition: transform 0.3s ease;
        `;
        
        restaurantCard.innerHTML = `
          <div class="featured-card featured-premium" style="
            background: #FFF8F0;
            border-radius: 20px;
            overflow: hidden;
            box-shadow: 0 10px 30px rgba(232, 184, 109, 0.2);
            transition: all 0.3s ease;
            position: relative;
            border: 3px solid #9CAF88;
            height: 100%;
            display: flex;
            flex-direction: column;
          ">
            <div class="featured-badge" style="
              position: absolute;
              bottom: 1rem;
              left: 1rem;
              background: #9CAF88;
              color: white;
              padding: 0.5rem 1rem;
              border-radius: 20px;
              display: flex;
              align-items: center;
              gap: 0.5rem;
              font-weight: 600;
              font-size: 0.9rem;
              z-index: 10;
              box-shadow: 0 4px 15px rgba(0,0,0,0.2);
            ">
              <span class="badge-icon">✨</span>
              <span class="badge-text">Featured</span>
            </div>
            
            <div class="featured-content" style="
              display: grid;
              grid-template-columns: 1fr 1fr;
              min-height: 400px;
              height: 100%;
              flex: 1;
            ">
              <div class="featured-image" style="
                position: relative;
                overflow: hidden;
                background: linear-gradient(45deg, #f0f0f0, #e0e0e0);
              ">
                <img src="${mainImage}" alt="${restaurant.name}" style="
                  width: 100%;
                  height: 100%;
                  object-fit: cover;
                  transition: transform 0.3s ease;
                " />
                <div class="image-overlay" style="
                  position: absolute;
                  top: 1rem;
                  left: 1rem;
                ">
                  <div class="restaurant-rating" style="
                    color: #3E2723;
                    display: flex;
                    align-items: center;
                    gap: 0.5rem;
                    font-size: 0.9rem;
                    font-weight: 500;
                  ">
                    <div class="date-score-display" style="
                      display: flex;
                      align-items: center;
                      gap: 0.5rem;
                      background: rgba(44, 44, 44, 0.9);
                      color: white;
                      padding: 0.5rem 1rem;
                      border-radius: 20px;
                      font-weight: 600;
                      font-size: 0.9rem;
                      border: 2px solid #D2691E;
                    ">
                      <i class="fas fa-heart" style="color: #D4AF37;"></i>
                      <span>${restaurant.dateNightScore}</span>
                    </div>
                  </div>
                </div>
              </div>
              
              <div class="featured-info" style="
                padding: 2rem;
                background: white;
                display: flex;
                flex-direction: column;
                justify-content: space-between;
                height: 100%;
                min-height: 300px;
              ">
                <div class="restaurant-header" style="
                  display: flex;
                  justify-content: space-between;
                  align-items: flex-start;
                  margin-bottom: 1rem;
                ">
                  <h3 class="restaurant-name" style="
                    font-size: 1.5rem;
                    font-weight: 700;
                    color: #333;
                    margin: 0;
                    flex: 1;
                  ">${restaurant.name}</h3>
                  <div class="restaurant-price" style="
                    background: #9CAF88;
                    color: white;
                    padding: 0.5rem 1rem;
                    border-radius: 20px;
                    font-size: 0.9rem;
                    font-weight: 600;
                    white-space: nowrap;
                  ">${priceSymbols}</div>
                </div>
                
                <p class="restaurant-cuisine" style="
                  color: #666;
                  font-size: 1rem;
                  margin-bottom: 0.5rem;
                  font-weight: 500;
                ">${cuisineText}</p>
                <p class="restaurant-address" style="
                  color: #888;
                  font-size: 0.9rem;
                  margin-bottom: 1.5rem;
                ">${restaurant.address}</p>
                
                <div class="featured-highlights" style="margin-bottom: 1.5rem;">
                  <div class="date-score" style="
                    display: flex;
                    align-items: center;
                    gap: 0.5rem;
                    font-size: 0.9rem;
                    color: #666;
                    margin-bottom: 0.5rem;
                  ">
                    <i class="fas fa-heart" style="color: #d63384;"></i>
                    <span>Date Score: <strong style="
                      background: linear-gradient(45deg, #d63384, #ff6b6b);
                      color: white;
                      padding: 0.25rem 0.5rem;
                      border-radius: 10px;
                      font-size: 0.8rem;
                    ">${restaurant.dateNightScore}</strong></span>
                  </div>
                </div>
                
                <div class="featured-actions" style="display: flex; gap: 0.75rem;">
                  <div class="btn btn-featured" style="
                    padding: 0.75rem 1.5rem;
                    border: none;
                    border-radius: 25px;
                    cursor: pointer;
                    font-weight: 600;
                    transition: all 0.3s ease;
                    text-decoration: none;
                    display: inline-flex;
                    align-items: center;
                    gap: 0.5rem;
                    font-size: 0.9rem;
                    flex: 1;
                    justify-content: center;
                    background: #9CAF88;
                    color: white;
                    box-shadow: 0 4px 15px rgba(156, 175, 136, 0.3);
                    pointer-events: none;
                  ">
                    <i class="fas fa-info-circle"></i>
                    View Restaurant Details
                  </div>
                </div>
              </div>
            </div>
          </div>
        `;
        
        featuredGrid.appendChild(restaurantCard);
      });

      console.log('Updated featured section with', featuredSlugs.length, 'restaurants');
    } catch (error) {
      console.error('Error loading featured restaurants:', error);
    }
  });
</script>
