---
import type { FeaturedRestaurant } from '@/data/featured';

export interface Props {
  restaurant: FeaturedRestaurant;
  tier: 'premium' | 'gold' | 'platinum';
}

const { restaurant, tier } = Astro.props;

const priceSymbols = '$'.repeat(restaurant.priceLevel);
const mainImage = restaurant.photos[0] || 'https://images.unsplash.com/photo-1414235077428-338989a2e8c0?w=800&h=600&fit=crop';

// Tier-specific styling with warm colors
const tierStyles = {
  premium: {
    borderColor: '#9CAF88',
    badgeColor: '#9CAF88',
    gradient: '#9CAF88',
    glowColor: 'rgba(156, 175, 136, 0.3)'
  },
  gold: {
    borderColor: '#E8B86D',
    badgeColor: '#E8B86D',
    gradient: '#E8B86D',
    glowColor: 'rgba(232, 184, 109, 0.3)'
  },
  platinum: {
    borderColor: '#D2691E',
    badgeColor: '#D2691E',
    gradient: '#D2691E',
    glowColor: 'rgba(210, 105, 30, 0.3)'
  }
};

const style = tierStyles[tier];
---

<div class={`featured-card featured-${tier}`} style={`--tier-color: ${style.borderColor}; --tier-gradient: ${style.gradient}; --tier-glow: ${style.glowColor};`}>
  <div class="featured-badge">
    <span class="badge-icon">
      {tier === 'platinum' ? 'üëë' : tier === 'gold' ? '‚≠ê' : '‚ú®'}
    </span>
    <span class="badge-text">{restaurant.badge || 'Featured'}</span>
  </div>
  
  <div class="featured-content">
    <div class="featured-image">
      <img src={mainImage} alt={restaurant.name} />
      <div class="image-overlay">
        <div class="restaurant-rating">
          <div class="date-score-display">
            <i class="fas fa-heart"></i>
            <span>{restaurant.dateNightScore}</span>
          </div>
        </div>
      </div>
    </div>
    
    <div class="featured-info">
      <div class="restaurant-header">
        <h3 class="restaurant-name">{restaurant.name}</h3>
        <div class="restaurant-price">{priceSymbols}</div>
      </div>
      
      <p class="restaurant-cuisine">{restaurant.cuisineTypes.join(', ')}</p>
      <p class="restaurant-address">{restaurant.area}</p>
      
      <div class="featured-highlights">
        <div class="date-score">
          <i class="fas fa-heart"></i>
          <span>Date Score: <strong>{restaurant.dateNightScore}</strong></span>
        </div>
        
        {restaurant.specialOffer && (
          <div class="special-offer">
            <i class="fas fa-gift"></i>
            <span>{restaurant.specialOffer}</span>
          </div>
        )}
      </div>
      
      <div class="featured-actions">
        <a href={restaurant.ctaUrl} class="btn btn-featured">
          <i class="fas fa-info-circle"></i>
          {restaurant.ctaText}
        </a>
      </div>
    </div>
  </div>
</div>

<style>
  .featured-card {
    background: #FFF8F0;
    border-radius: 20px;
    overflow: hidden;
    box-shadow: 0 10px 30px rgba(232, 184, 109, 0.2);
    transition: all 0.3s ease;
    position: relative;
    border: 3px solid var(--tier-color);
  }
  
  .featured-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: var(--tier-gradient);
    border-radius: 20px;
    padding: 3px;
    mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
    mask-composite: exclude;
    z-index: -1;
  }
  
  .featured-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 50px var(--tier-glow);
  }
  
  .featured-badge {
    position: absolute;
    bottom: 1rem;
    right: 1rem;
    background: var(--tier-color);
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 20px;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-weight: 600;
    font-size: 0.9rem;
    z-index: 10;
    box-shadow: 0 4px 15px rgba(0,0,0,0.2);
  }
  
  .badge-icon {
    font-size: 1.1rem;
  }
  
  .featured-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    min-height: 300px;
  }
  
  .featured-image {
    position: relative;
    overflow: hidden;
  }
  
  .featured-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }
  
  .featured-card:hover .featured-image img {
    transform: scale(1.05);
  }
  
  .image-overlay {
    position: absolute;
    top: 1rem;
    left: 1rem;
  }
  
  .restaurant-rating {
    color: #3E2723;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.9rem;
    font-weight: 500;
  }
  
  .date-score-display {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    background: rgba(44, 44, 44, 0.9);
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-weight: 600;
    font-size: 0.9rem;
    border: 2px solid #D2691E;
  }
  
  .date-score-display i {
    color: #D4AF37;
  }
  
  .date-score-display span {
    color: white;
  }
  
  .featured-info {
    padding: 2rem;
    background: white;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }
  
  .restaurant-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 1rem;
  }
  
  .restaurant-name {
    font-size: 1.5rem;
    font-weight: 700;
    color: #333;
    margin: 0;
    flex: 1;
  }
  
  .restaurant-price {
    background: var(--tier-color);
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-size: 0.9rem;
    font-weight: 600;
    white-space: nowrap;
  }
  
  .restaurant-cuisine {
    color: #666;
    font-size: 1rem;
    margin-bottom: 0.5rem;
    font-weight: 500;
  }
  
  .restaurant-address {
    color: #888;
    font-size: 0.9rem;
    margin-bottom: 1.5rem;
  }
  
  .featured-highlights {
    margin-bottom: 1.5rem;
  }
  
  .date-score {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.9rem;
    color: #666;
    margin-bottom: 0.5rem;
  }
  
  .date-score i {
    color: #d63384;
  }
  
  .date-score strong {
    background: linear-gradient(45deg, #d63384, #ff6b6b);
    color: white;
    padding: 0.25rem 0.5rem;
    border-radius: 10px;
    font-size: 0.8rem;
  }
  
  .special-offer {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.9rem;
    color: var(--tier-color);
    font-weight: 600;
    background: rgba(0,0,0,0.05);
    padding: 0.5rem;
    border-radius: 10px;
  }
  
  .special-offer i {
    color: var(--tier-color);
  }
  
  .featured-actions {
    display: flex;
    gap: 0.75rem;
  }
  
  .btn {
    padding: 0.75rem 1.5rem;
    border: none;
    border-radius: 25px;
    cursor: pointer;
    font-weight: 600;
    transition: all 0.3s ease;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.9rem;
    flex: 1;
    justify-content: center;
  }
  
  .btn-featured {
    background: var(--tier-gradient);
    color: white;
    box-shadow: 0 4px 15px var(--tier-glow);
  }
  
  .btn-featured:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px var(--tier-glow);
  }
  
  .btn-secondary {
    background: #f8f9fa;
    color: #333;
    border: 2px solid #e9ecef;
  }
  
  .btn-secondary:hover {
    background: #e9ecef;
    border-color: #dee2e6;
  }
  
  /* Tier-specific animations */
  .featured-platinum {
    animation: platinumGlow 3s ease-in-out infinite;
  }
  
  .featured-gold {
    animation: goldShine 2s ease-in-out infinite;
  }
  
  .featured-premium {
    animation: premiumPulse 2.5s ease-in-out infinite;
  }
  
  @keyframes platinumGlow {
    0%, 100% { box-shadow: 0 10px 30px rgba(0,0,0,0.1); }
    50% { box-shadow: 0 15px 40px rgba(111, 66, 193, 0.3); }
  }
  
  @keyframes goldShine {
    0%, 100% { box-shadow: 0 10px 30px rgba(0,0,0,0.1); }
    50% { box-shadow: 0 15px 40px rgba(255, 193, 7, 0.3); }
  }
  
  @keyframes premiumPulse {
    0%, 100% { box-shadow: 0 10px 30px rgba(0,0,0,0.1); }
    50% { box-shadow: 0 15px 40px rgba(40, 167, 69, 0.3); }
  }
  
  @media (max-width: 768px) {
    .featured-content {
      grid-template-columns: 1fr;
    }
    
    .featured-info {
      padding: 1.5rem;
    }
    
    .featured-actions {
      flex-direction: column;
    }
    
    .btn {
      flex: none;
    }
  }
</style>
