---
import { getAllCities } from '@/data/cities';
import { getAllCuisines } from '@/data/cuisines';

const cities = getAllCities();
const cuisines = getAllCuisines();
---

<header class="header">
  <nav class="nav">
    <div class="nav-container">
      <div class="nav-logo">
        <a href="/">
          <h1>
          <div class="logo">
            <div class="logo-icon">D</div>
            <div class="logo-text">
              <span class="logo-main">Date Night</span>
              <span class="logo-sub">Restaurants</span>
            </div>
          </div>
        </h1>
        </a>
      </div>
      
      <ul class="nav-menu">
        <li><a href="/">Home</a></li>
        <li class="nav-dropdown">
          <a href="/cities/">Cities <i class="fas fa-chevron-down"></i></a>
          <div class="dropdown-menu">
            {cities.filter(city => city.restaurantCount > 0).map(city => (
              <a href={`/cities/${city.slug}/`}>{city.name}</a>
            ))}
          </div>
        </li>
        <li class="nav-dropdown">
          <a href="/cuisines/">Cuisines <i class="fas fa-chevron-down"></i></a>
          <div class="dropdown-menu">
            {cuisines.filter(cuisine => cuisine.restaurantCount > 0).map(cuisine => (
              <a href={`/cuisines/${cuisine.slug}/`}>{cuisine.name}</a>
            ))}
          </div>
        </li>
        <li><a href="/neighborhoods/">Neighborhoods</a></li>
        <li><a href="/blog/">Blog</a></li>
        <li><a href="/about/">About</a></li>
        <li><a href="/contact/">Contact</a></li>
      </ul>
      
      <div class="nav-toggle">
        <span></span>
        <span></span>
        <span></span>
      </div>
    </div>
  </nav>
</header>

<style>
  .header {
    background: #fff;
    box-shadow: 0 2px 20px rgba(0,0,0,0.1);
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
  }
  
  .nav-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 2rem;
    max-width: 1200px;
    margin: 0 auto;
  }
  
  .nav-logo h1 {
    margin: 0;
  }
  
  .logo {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }
  
  .logo-icon {
    width: 50px;
    height: 50px;
    background: linear-gradient(135deg, #D4AF37, #E6C547);
    color: #2C2C2C;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    font-weight: 700;
    font-family: 'Playfair Display', serif;
    box-shadow: 0 4px 12px rgba(212, 175, 55, 0.3);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  
  .logo-icon:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(212, 175, 55, 0.4);
  }
  
  .logo-text {
    display: flex;
    flex-direction: column;
    line-height: 1.2;
  }
  
  .logo-main {
    color: #2C2C2C;
    font-size: 1.4rem;
    font-weight: 700;
    font-family: 'Playfair Display', serif;
  }
  
  .logo-sub {
    color: #6B7B7B;
    font-size: 0.9rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }
  
  .nav-menu {
    display: flex;
    list-style: none;
    gap: 2rem;
    margin: 0;
    padding: 0;
  }
  
  .nav-menu a {
    color: #2C2C2C;
    font-weight: 500;
    transition: color 0.3s ease;
    display: flex;
    align-items: center;
    gap: 0.25rem;
  }
  
  .nav-menu a:hover {
    color: #D4AF37;
  }
  
  .nav-dropdown {
    position: relative;
  }
  
  .dropdown-menu {
    position: absolute;
    top: 100%;
    left: 0;
    background: white;
    box-shadow: 0 5px 20px rgba(0,0,0,0.1);
    border-radius: 8px;
    padding: 0.5rem 0;
    min-width: 200px;
    opacity: 0;
    visibility: hidden;
    transform: translateY(-10px);
    transition: all 0.3s ease;
  }
  
  .nav-dropdown:hover .dropdown-menu {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
  }
  
  .dropdown-menu a {
    display: block;
    padding: 0.5rem 1rem;
    color: #333;
    transition: background 0.3s ease;
  }
  
  .dropdown-menu a:hover {
    background: #F8F6F0;
    color: #D4AF37;
  }
  
  .nav-toggle {
    display: none;
    flex-direction: column;
    cursor: pointer;
  }
  
  .nav-toggle span {
    width: 25px;
    height: 3px;
    background: #333;
    margin: 3px 0;
    transition: 0.3s;
  }
  
  @media (max-width: 768px) {
    .nav-menu {
      display: none;
    }
    
    .nav-toggle {
      display: flex;
    }
  }
</style>
