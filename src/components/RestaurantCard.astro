---
interface Props {
  restaurant: {
    id: string;
    name: string;
    slug: string;
    address: string;
    neighborhood: string;
    neighborhood_slug: string;
    city: string;
    city_slug: string;
    cuisine_types: string[];
    price_level: number;
    rating: number;
    date_night_score: number;
    photos: string[];
    description: string;
    phone: string;
    website: string;
    is_active: boolean;
  };
}

const { restaurant } = Astro.props;

// Generate price symbols
const priceSymbols = '$'.repeat(restaurant.price_level);

// Get main image
const mainImage = restaurant.photos[0] || 'https://images.unsplash.com/photo-1414235077428-338989a2e8c0?w=800&h=600&fit=crop&ixlib=rb-4.0.3';

// Format cuisine types
const cuisineDisplay = restaurant.cuisine_types.map(cuisine => 
  cuisine.replace(/_/g, ' ').replace(/\b\w/g, l => l.toUpperCase())
).join(', ');
---

<div class="restaurant-card" 
     data-neighborhood={restaurant.neighborhood}
     data-price={restaurant.price_level}
     data-rating={restaurant.rating}
     data-cuisine={restaurant.cuisine_types.join(', ')}
     data-date-score={restaurant.date_night_score}>
  <a href={`/restaurants/${restaurant.neighborhood_slug}/${restaurant.slug}/`} class="card-link">
    <div class="card-image">
      <img 
        src={mainImage} 
        alt={`${restaurant.name} - ${restaurant.cuisine_types[0].replace(/_/g, ' ')} restaurant in ${restaurant.neighborhood}, Los Angeles`}
        loading="lazy"
        onerror="this.src='https://images.unsplash.com/photo-1414235077428-338989a2e8c0?w=800&h=600&fit=crop&ixlib=rb-4.0.3'"
      />
      <div class="card-overlay">
        <div class="card-rating">
          <span class="date-score-display">
            <i class="fas fa-heart"></i>
            <span>{restaurant.date_night_score}</span>
          </span>
        </div>
      </div>
      {restaurant.date_night_score >= 90 && (
        <div class="top-rated-badge">
          <i class="fas fa-crown"></i>
          <span>Top Rated</span>
        </div>
      )}
    </div>
    
    <div class="card-content">
      <div class="card-header">
        <h3 class="restaurant-name">{restaurant.name}</h3>
        <div class="restaurant-price">{priceSymbols}</div>
      </div>
      
      <p class="restaurant-cuisine">{cuisineDisplay}</p>
      <p class="restaurant-address">{restaurant.address}</p>
      
      <div class="date-score">
        <i class="fas fa-heart"></i>
        <span>Date Score: <strong>{restaurant.date_night_score}</strong></span>
      </div>
      
      <div class="card-actions">
        <a href={`/restaurants/${restaurant.neighborhood_slug}/${restaurant.slug}/`} class="btn btn-primary">
          <i class="fas fa-info-circle"></i> View Details
        </a>
      </div>
    </div>
  </a>
</div>

<style>
  .restaurant-card {
    background: white;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0,0,0,0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    position: relative;
  }

  .restaurant-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 30px rgba(0,0,0,0.15);
  }

  .card-link {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .card-image {
    position: relative;
    height: 200px;
    overflow: hidden;
  }

  .card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .restaurant-card:hover .card-image img {
    transform: scale(1.05);
  }

  .card-overlay {
    position: absolute;
    top: 1rem;
    right: 1rem;
    z-index: 2;
  }

  .card-rating {
    background: rgba(0,0,0,0.8);
    color: white;
    padding: 0.5rem 0.75rem;
    border-radius: 20px;
    font-size: 0.9rem;
    font-weight: 600;
  }

  .date-score-display {
    display: flex;
    align-items: center;
    gap: 0.25rem;
  }

  .date-score-display i {
    color: #e74c3c;
  }

  .top-rated-badge {
    position: absolute;
    top: 1rem;
    left: 1rem;
    background: linear-gradient(135deg, #ffd700, #ffed4e);
    color: #2c3e50;
    padding: 0.5rem 0.75rem;
    border-radius: 20px;
    font-size: 0.8rem;
    font-weight: 600;
    display: flex;
    align-items: center;
    gap: 0.25rem;
    z-index: 2;
  }

  .top-rated-badge i {
    color: #2c3e50;
  }

  .card-content {
    padding: 1.5rem;
  }

  .card-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 0.75rem;
  }

  .restaurant-name {
    font-size: 1.25rem;
    font-weight: 700;
    color: #2c3e50;
    margin: 0;
    line-height: 1.3;
    flex: 1;
    margin-right: 1rem;
  }

  .restaurant-price {
    font-size: 1.1rem;
    color: #28a745;
    font-weight: 600;
    white-space: nowrap;
  }

  .restaurant-cuisine {
    color: #6c757d;
    font-size: 0.95rem;
    margin-bottom: 0.5rem;
    font-weight: 500;
  }

  .restaurant-address {
    color: #6c757d;
    font-size: 0.9rem;
    margin-bottom: 1rem;
    line-height: 1.4;
  }

  .date-score {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 1rem;
    color: #e74c3c;
    font-weight: 600;
    font-size: 0.95rem;
  }

  .date-score i {
    color: #e74c3c;
  }

  .card-actions {
    text-align: center;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    background: #e74c3c;
    color: white;
    text-decoration: none;
    border-radius: 6px;
    font-weight: 600;
    font-size: 0.95rem;
    transition: background-color 0.3s ease;
  }

  .btn:hover {
    background: #c0392b;
  }

  .btn i {
    font-size: 0.9rem;
  }

  /* Responsive design */
  @media (max-width: 768px) {
    .card-content {
      padding: 1.25rem;
    }
    
    .restaurant-name {
      font-size: 1.1rem;
    }
    
    .card-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.5rem;
    }
    
    .restaurant-price {
      align-self: flex-start;
    }
  }
</style>