---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { AdminDatabase } from '@/lib/admin-database';
import { restaurants } from '@/data/restaurants';

// Use JSON data for admin dashboard (database will be used in production)
const restaurantsData = restaurants.slice(0, 10);
const citiesData = [{ name: 'Los Angeles', slug: 'los-angeles', restaurant_count: restaurants.length }];

// Calculate stats from JSON data
const totalRestaurants = restaurants.length;
const averageRating = restaurants.reduce((sum, r) => sum + r.rating, 0) / totalRestaurants;
const averageDateScore = restaurants.reduce((sum, r) => sum + r.dateNightScore, 0) / totalRestaurants;
const topRatedCount = restaurants.filter(r => r.rating >= 4.5).length;

const statsInfo = {
  totalRestaurants,
  averageRating,
  averageDateScore,
  topRatedCount,
  highDateScoreCount: restaurants.filter(r => r.dateNightScore >= 90).length
};

// Calculate popular cuisines from JSON data
const cuisineCounts = {};
restaurants.forEach(restaurant => {
  restaurant.cuisineTypes.forEach(cuisine => {
    cuisineCounts[cuisine] = (cuisineCounts[cuisine] || 0) + 1;
  });
});

const popularCuisinesData = Object.entries(cuisineCounts)
  .map(([name, count]) => ({ name: name.replace(/_/g, ' '), count }))
  .sort((a, b) => b.count - a.count)
  .slice(0, 5);

const restaurantsList = restaurantsData;
const citiesList = citiesData;
const stats = statsInfo;
const popularCuisinesList = popularCuisinesData;
---

<BaseLayout
  title="Admin Dashboard | Date Night Restaurants"
  description="Manage restaurants, cities, and content for Date Night Restaurants"
>
  <div class="admin-dashboard">
    <header class="admin-header">
      <div class="container">
        <h1>Admin Dashboard</h1>
        <nav class="admin-nav">
          <a href="/admin/featured" class="nav-link">Featured Restaurants</a>
          <a href="/admin/restaurants" class="nav-link">All Restaurants</a>
          <a href="/admin/cities" class="nav-link">Cities</a>
          <a href="/admin/neighborhoods" class="nav-link">Neighborhoods</a>
          <a href="/admin/analytics" class="nav-link">Analytics</a>
        </nav>
      </div>
    </header>

    <main class="admin-content">
      <div class="container">
        <!-- Stats Overview -->
        <section class="stats-overview">
          <h2>Overview</h2>
          <div class="stats-grid">
            <div class="stat-card">
              <h3>Total Restaurants</h3>
              <div class="stat-number">{stats.totalRestaurants}</div>
            </div>
            <div class="stat-card">
              <h3>Average Rating</h3>
              <div class="stat-number">{stats.averageRating.toFixed(1)}</div>
            </div>
            <div class="stat-card">
              <h3>Average Date Score</h3>
              <div class="stat-number">{stats.averageDateScore.toFixed(0)}</div>
            </div>
            <div class="stat-card">
              <h3>Top Rated</h3>
              <div class="stat-number">{stats.topRatedCount}</div>
            </div>
          </div>
        </section>

        <!-- Recent Restaurants -->
        <section class="recent-restaurants">
          <h2>Recent Restaurants</h2>
          <div class="restaurants-table">
            <table>
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Neighborhood</th>
                  <th>Rating</th>
                  <th>Date Score</th>
                  <th>Price Level</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                {restaurantsList.map(restaurant => (
                  <tr>
                    <td>
                      <a href={`/admin/restaurants/${restaurant.id || restaurant.slug}`} class="restaurant-link">
                        {restaurant.name}
                      </a>
                    </td>
                    <td>{restaurant.neighborhoods?.name || restaurant.neighborhood || 'N/A'}</td>
                    <td>
                      <span class="rating">â˜… {restaurant.rating}</span>
                    </td>
                    <td>
                      <span class="date-score">{restaurant.date_night_score || restaurant.dateNightScore}</span>
                    </td>
                    <td>
                      <span class="price-level">{'$'.repeat(restaurant.price_level || restaurant.priceLevel)}</span>
                    </td>
                    <td>
                      <a href={`/admin/restaurants/${restaurant.slug}/`} class="btn btn-sm">Edit</a>
                      <a href={`/losangeles/${restaurant.slug}/`} class="btn btn-sm btn-outline" target="_blank">View</a>
                    </td>
                  </tr>
                ))}
              </tbody>
            </table>
          </div>
        </section>

        <!-- Popular Cuisines -->
        <section class="popular-cuisines">
          <h2>Popular Cuisines</h2>
          <div class="cuisines-list">
            {popularCuisinesList.map(cuisine => (
              <div class="cuisine-item">
                <span class="cuisine-name">{cuisine.name}</span>
                <span class="cuisine-count">{cuisine.count} restaurants</span>
              </div>
            ))}
          </div>
        </section>

        <!-- Cities Overview -->
        <section class="cities-overview">
          <h2>Cities</h2>
          <div class="cities-grid">
            {citiesList.map(city => (
              <div class="city-card">
                <h3>{city.name}</h3>
                <p>{city.restaurant_count} restaurants</p>
                <a href={`/admin/cities/${city.slug}`} class="btn btn-sm">Manage</a>
              </div>
            ))}
          </div>
        </section>
      </div>
    </main>
  </div>
</BaseLayout>

<style>
  .admin-dashboard {
    min-height: 100vh;
    background: #f8f9fa;
  }

  .admin-header {
    background: #2C2C2C;
    color: white;
    padding: 1rem 0;
    border-bottom: 3px solid #D4AF37;
  }

  .admin-header h1 {
    margin: 0 0 1rem 0;
    color: #D4AF37;
  }

  .admin-nav {
    display: flex;
    gap: 2rem;
  }

