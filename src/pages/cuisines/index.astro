---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { getAllCuisines } from '@/data/cuisines';
import { restaurants } from '@/data/restaurants';

const cuisines = getAllCuisines();
const totalRestaurants = restaurants.length;

const structuredData = {
  "@context": "https://schema.org",
  "@type": "CollectionPage",
  "name": "Cuisine Types for Date Night Restaurants in Los Angeles",
  "description": "Explore romantic date night restaurants in Los Angeles by cuisine type. From fine dining to wine bars, find the perfect dining experience for your date night.",
  "url": "https://datenightrestaurants.com/cuisines/",
  "mainEntity": cuisines.map(cuisine => ({
    "@type": "ItemList",
    "name": `${cuisine.name} Date Night Restaurants`,
    "url": `https://datenightrestaurants.com/cuisines/${cuisine.slug}/`,
    "numberOfItems": cuisine.restaurantCount
  }))
};
---

<BaseLayout
  title="Cuisine Types for Date Night Restaurants in Los Angeles | Explore by Cuisine"
  description="Explore romantic date night restaurants in Los Angeles by cuisine type. From fine dining to wine bars, find the perfect dining experience for your date night."
  keywords={['cuisine types LA', 'restaurant cuisines Los Angeles', 'fine dining LA', 'Italian restaurants LA', 'French restaurants LA', 'Japanese restaurants LA', 'wine bars LA']}
  canonical="https://datenightrestaurants.com/cuisines/"
  structuredData={structuredData}
>
  <main class="cuisines-page">
    <div class="hero-section">
      <div class="container">
        <h1>Date Night Restaurants by Cuisine</h1>
        <p class="hero-subtitle">Explore romantic dining experiences in Los Angeles organized by cuisine type</p>
        
        <div class="hero-stats">
          <div class="stat">
            <span class="stat-number">{cuisines.length}</span>
            <span class="stat-label">Cuisine Types</span>
          </div>
          <div class="stat">
            <span class="stat-number">{totalRestaurants}</span>
            <span class="stat-label">Total Restaurants</span>
          </div>
          <div class="stat">
            <span class="stat-number">{Math.round(totalRestaurants / cuisines.length)}</span>
            <span class="stat-label">Avg per Cuisine</span>
          </div>
        </div>
      </div>
    </div>

    <div class="cuisines-grid">
      <div class="container">
        <h2>Explore by Cuisine Type</h2>
        <div class="grid">
          {cuisines.map(cuisine => (
            <div class="cuisine-card">
              <div class="cuisine-header">
                <div class="cuisine-icon">{cuisine.icon}</div>
                <h3>{cuisine.name}</h3>
                <span class="restaurant-count">{cuisine.restaurantCount} restaurant{cuisine.restaurantCount !== 1 ? 's' : ''}</span>
              </div>
              
              <p class="cuisine-description">{cuisine.description}</p>
              
              <div class="cuisine-stats">
                <div class="stat">
                  <span class="stat-value">{cuisine.averageRating.toFixed(1)}</span>
                  <span class="stat-label">Avg Rating</span>
                </div>
                <div class="stat">
                  <span class="stat-value">{'$'.repeat(Math.round(cuisine.averagePriceLevel))}</span>
                  <span class="stat-label">Avg Price</span>
                </div>
              </div>
              
              <div class="cuisine-actions">
                <a href={`/cuisines/${cuisine.slug}/`} class="btn btn-primary">
                  View {cuisine.name} Restaurants
                </a>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>

    <div class="cuisine-info">
      <div class="container">
        <h2>About Cuisine Types for Date Nights</h2>
        <p>Los Angeles offers an incredible diversity of culinary experiences perfect for romantic date nights. From authentic Italian trattorias to sophisticated French bistros, from fresh Japanese sushi to intimate wine bars, each cuisine type offers its own unique atmosphere and dining experience.</p>
        
        <h3>Popular Cuisine Types for Date Nights:</h3>
        <ul>
          <li><strong>Fine Dining:</strong> Upscale restaurants with exceptional service and cuisine</li>
          <li><strong>Italian:</strong> Romantic trattorias with authentic pasta and wine</li>
          <li><strong>French:</strong> Elegant bistros with sophisticated atmosphere</li>
          <li><strong>Japanese:</strong> Intimate sushi bars and kaiseki experiences</li>
          <li><strong>Seafood:</strong> Fresh ocean-to-table dining with coastal views</li>
          <li><strong>Wine Bars:</strong> Intimate settings perfect for conversation</li>
        </ul>
      </div>
    </div>
  </main>
</BaseLayout>

<style>
  .cuisines-page {
    padding-top: 80px;
  }
  
  .hero-section {
    background: linear-gradient(135deg, #2C2C2C 0%, #1a1a1a 100%);
    color: white;
    padding: 4rem 0;
    text-align: center;
  }
  
  .hero-section h1 {
    font-size: 3rem;
    margin-bottom: 1rem;
    color: #D4AF37;
    font-family: 'Playfair Display', serif;
  }
  
  .hero-subtitle {
    font-size: 1.2rem;
    margin-bottom: 3rem;
    color: #e0e0e0;
  }
  
  .hero-stats {
    display: flex;
    justify-content: center;
    gap: 3rem;
    margin-top: 2rem;
  }
  
  .stat {
    text-align: center;
  }
  
  .stat-number {
    display: block;
    font-size: 2.5rem;
    font-weight: 700;
    color: #D4AF37;
  }
  
  .stat-label {
    font-size: 1rem;
    color: #e0e0e0;
  }
  
  .cuisines-grid {
    padding: 4rem 0;
  }
  
  .cuisines-grid h2 {
    text-align: center;
    font-size: 2.5rem;
    margin-bottom: 3rem;
    color: #2C2C2C;
    font-family: 'Playfair Display', serif;
  }
  
  .grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
  }
  
  .cuisine-card {
    background: white;
    border-radius: 15px;
    padding: 2rem;
    box-shadow: 0 4px 20px rgba(0,0,0,0.1);
    border: 1px solid #e0e0e0;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  
  .cuisine-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 30px rgba(0,0,0,0.15);
  }
  
  .cuisine-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1.5rem;
    padding-bottom: 1rem;
    border-bottom: 2px solid #D4AF37;
  }
  
  .cuisine-icon {
    font-size: 2rem;
  }
  
  .cuisine-header h3 {
    font-size: 1.5rem;
    color: #2C2C2C;
    margin: 0;
    flex: 1;
  }
  
  .restaurant-count {
    background: #D4AF37;
    color: #2C2C2C;
    padding: 0.3rem 0.8rem;
    border-radius: 15px;
    font-size: 0.9rem;
    font-weight: 600;
  }
  
  .cuisine-description {
    color: #666;
    line-height: 1.6;
    margin-bottom: 1.5rem;
  }
  
  .cuisine-stats {
    display: flex;
    gap: 2rem;
    margin-bottom: 1.5rem;
  }
  
  .cuisine-stats .stat {
    text-align: center;
  }
  
  .stat-value {
    display: block;
    font-size: 1.2rem;
    font-weight: 600;
    color: #2C2C2C;
  }
  
  .cuisine-stats .stat-label {
    font-size: 0.9rem;
    color: #666;
  }
  
  .cuisine-actions {
    text-align: center;
  }
  
  .btn {
    display: inline-block;
    padding: 0.8rem 2rem;
    border-radius: 25px;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
  }
  
  .btn-primary {
    background: linear-gradient(45deg, #D4AF37, #E6C547);
    color: #2C2C2C;
  }
  
  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(212, 175, 55, 0.4);
  }
  
  .cuisine-info {
    padding: 4rem 0;
    background: #FFF8F0;
  }
  
  .cuisine-info h2 {
    font-size: 2rem;
    margin-bottom: 1.5rem;
    color: #2C2C2C;
    font-family: 'Playfair Display', serif;
  }
  
  .cuisine-info h3 {
    font-size: 1.5rem;
    margin: 2rem 0 1rem;
    color: #2C2C2C;
    font-family: 'Playfair Display', serif;
  }
  
  .cuisine-info p {
    font-size: 1.1rem;
    line-height: 1.6;
    color: #666;
    margin-bottom: 1.5rem;
  }
  
  .cuisine-info ul {
    font-size: 1.1rem;
    line-height: 1.6;
    color: #666;
    margin-bottom: 1.5rem;
    padding-left: 2rem;
  }
  
  .cuisine-info li {
    margin-bottom: 0.5rem;
  }
  
  .cuisine-info strong {
    color: #2C2C2C;
  }
  
  @media (max-width: 768px) {
    .hero-stats {
      flex-direction: column;
      gap: 1.5rem;
    }
    
    .grid {
      grid-template-columns: 1fr;
    }
    
    .cuisine-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.5rem;
    }
  }
</style>
