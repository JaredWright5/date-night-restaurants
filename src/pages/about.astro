---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { restaurants } from '@/data/restaurants';

const totalRestaurants = restaurants.length;
const neighborhoods = Array.from(new Set(restaurants.map(r => r.neighborhood))).length;
const avgRating = (restaurants.reduce((sum, r) => sum + r.rating, 0) / restaurants.length).toFixed(1);

const structuredData = {
  "@context": "https://schema.org",
  "@type": "AboutPage",
  "name": "About Date Night Restaurants",
  "description": "Learn about our mission to help couples find the perfect romantic dining experiences in Los Angeles.",
  "url": "https://datenightrestaurants.com/about/",
  "mainEntity": {
    "@type": "Organization",
    "name": "Date Night Restaurants",
    "description": "Your guide to the most romantic restaurants in Los Angeles",
    "url": "https://datenightrestaurants.com",
    "foundingDate": "2024",
    "areaServed": "Los Angeles, California"
  }
};
---

<BaseLayout 
  title="About Us | Date Night Restaurants | Your Guide to Romantic Dining in LA"
  description="Learn about our mission to help couples find the perfect romantic dining experiences in Los Angeles. Discover how we curate the best date night restaurants."
  keywords={['about us', 'date night restaurants', 'romantic dining guide', 'Los Angeles restaurants', 'couples dining']}
  canonical="https://datenightrestaurants.com/about/"
  structuredData={structuredData}
>
  <!-- About Hero -->
  <section class="about-hero">
    <div class="container">
      <div class="hero-content">
        <h1>About Date Night Restaurants</h1>
        <p class="hero-subtitle">Your trusted guide to the most romantic dining experiences in Los Angeles</p>
      </div>
    </div>
  </section>

  <!-- Mission Section -->
  <section class="mission">
    <div class="container">
      <div class="mission-content">
        <div class="mission-text">
          <h2>Our Mission</h2>
          <p>
            At Date Night Restaurants, we believe that every couple deserves to find the perfect romantic dining experience. 
            Our mission is to curate and showcase the most exceptional restaurants in Los Angeles that create unforgettable 
            moments for couples celebrating love, anniversaries, or simply enjoying each other's company.
          </p>
          <p>
            We understand that choosing the right restaurant for a special occasion can be overwhelming. That's why we've 
            personally visited, reviewed, and carefully selected each restaurant in our collection to ensure they meet our 
            high standards for romance, ambiance, cuisine, and service.
          </p>
        </div>
        <div class="mission-stats">
          <div class="stat-card">
            <div class="stat-number">{totalRestaurants}</div>
            <div class="stat-label">Curated Restaurants</div>
          </div>
          <div class="stat-card">
            <div class="stat-number">{neighborhoods}</div>
            <div class="stat-label">LA Neighborhoods</div>
          </div>
          <div class="stat-card">
            <div class="stat-number">{avgRating}â˜…</div>
            <div class="stat-label">Average Rating</div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- What We Do -->
  <section class="what-we-do">
    <div class="container">
      <h2>What We Do</h2>
      <div class="features-grid">
        <div class="feature-card">
          <div class="feature-icon">
            <i class="fas fa-heart"></i>
          </div>
          <h3>Curated Selection</h3>
          <p>We personally visit and review each restaurant to ensure they provide the perfect romantic atmosphere for date nights.</p>
        </div>
        
        <div class="feature-card">
          <div class="feature-icon">
            <i class="fas fa-star"></i>
          </div>
          <h3>Quality Assurance</h3>
          <p>Every restaurant in our collection meets our high standards for food quality, service, and romantic ambiance.</p>
        </div>
        
        <div class="feature-card">
          <div class="feature-icon">
            <i class="fas fa-map-marker-alt"></i>
          </div>
          <h3>Neighborhood Focus</h3>
          <p>We organize restaurants by neighborhood to help you find the perfect spot close to home or for exploring new areas.</p>
        </div>
        
        <div class="feature-card">
          <div class="feature-icon">
            <i class="fas fa-utensils"></i>
          </div>
          <h3>Cuisine Variety</h3>
          <p>From fine dining to casual romantic spots, we cover all types of cuisine to match every couple's preferences.</p>
        </div>
        
        <div class="feature-card">
          <div class="feature-icon">
            <i class="fas fa-search"></i>
          </div>
          <h3>Easy Discovery</h3>
          <p>Our advanced filtering system helps you find the perfect restaurant based on location, cuisine, price, and rating.</p>
        </div>
        
        <div class="feature-card">
          <div class="feature-icon">
            <i class="fas fa-mobile-alt"></i>
          </div>
          <h3>Mobile Optimized</h3>
          <p>Our website is designed to work perfectly on all devices, so you can find your next date night spot anywhere.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Date Score System -->
  <section class="date-score-system">
    <div class="container">
      <h2>Our Proprietary Date Score System</h2>
      <p class="section-intro">
        Unlike traditional star ratings that focus on general dining quality, our Date Score is specifically designed 
        to evaluate how perfect a restaurant is for romantic date nights. We use a sophisticated weighted algorithm 
        that considers six key factors that matter most to couples.
      </p>
      
      <div class="score-factors">
        <div class="factor-card">
          <div class="factor-header">
            <div class="factor-icon">
              <i class="fas fa-candle-holder"></i>
            </div>
            <h3>Ambiance & Vibe Signals</h3>
            <div class="factor-weight">30%</div>
          </div>
          <p>
            We analyze social comments, website copy, photos, and reviews for romantic keywords like "cozy," 
            "candlelit," "intimate," "rooftop view," "live music," and "soft lighting" to identify truly 
            romantic atmospheres.
          </p>
        </div>
        
        <div class="factor-card">
          <div class="factor-header">
            <div class="factor-icon">
              <i class="fas fa-heart"></i>
            </div>
            <h3>Social Buzz & Sentiment</h3>
            <div class="factor-weight">20%</div>
          </div>
          <p>
            We measure how often restaurants are mentioned in couple-focused social content and analyze 
            the sentiment of those mentions, including engagement rates and follower demographics.
          </p>
        </div>
        
        <div class="factor-card">
          <div class="factor-header">
            <div class="factor-icon">
              <i class="fas fa-ring"></i>
            </div>
            <h3>Occasion Fit</h3>
            <div class="factor-weight">15%</div>
          </div>
          <p>
            We track how often users mention date-specific contexts like "anniversary," "first date," 
            "proposal," "engagement," and "birthday dinner" while filtering out work or family dining mentions.
          </p>
        </div>
        
        <div class="factor-card">
          <div class="factor-header">
            <div class="factor-icon">
              <i class="fas fa-star"></i>
            </div>
            <h3>Quality & Popularity</h3>
            <div class="factor-weight">15%</div>
          </div>
          <p>
            We consider Google and Yelp ratings, review volume, rating trends over time, and the frequency 
            of new reviews to ensure consistent quality.
          </p>
        </div>
        
        <div class="factor-card">
          <div class="factor-header">
            <div class="factor-icon">
              <i class="fas fa-trending-up"></i>
            </div>
            <h3>Freshness & Momentum</h3>
            <div class="factor-weight">10%</div>
          </div>
          <p>
            We track recent positive social activities, new mentions in the last 30 days, trending posts, 
            new openings, and media coverage to identify restaurants with current buzz.
          </p>
        </div>
        
        <div class="factor-card">
          <div class="factor-header">
            <div class="factor-icon">
              <i class="fas fa-clock"></i>
            </div>
            <h3>Practical Date Night Factors</h3>
            <div class="factor-weight">10%</div>
          </div>
          <p>
            We evaluate reservation availability, price appropriateness for date nights, noise levels, 
            operating hours, and location accessibility to ensure a smooth romantic experience.
          </p>
        </div>
      </div>
      
      <div class="score-explanation">
        <h3>How to Use Date Scores</h3>
        <div class="score-ranges">
          <div class="score-range">
            <div class="range-score">95-100</div>
            <div class="range-label">Exceptional Date Night Experience</div>
            <div class="range-description">Perfect for special occasions, anniversaries, and memorable moments</div>
          </div>
          <div class="score-range">
            <div class="range-score">90-94</div>
            <div class="range-label">Outstanding Romantic Dining</div>
            <div class="range-description">Excellent choice for any romantic occasion</div>
          </div>
          <div class="score-range">
            <div class="range-score">85-89</div>
            <div class="range-label">Great Date Night Spot</div>
            <div class="range-description">Reliable choice for regular date nights</div>
          </div>
          <div class="score-range">
            <div class="range-score">80-84</div>
            <div class="range-label">Good Date Night Option</div>
            <div class="range-description">Solid choice for casual romantic dining</div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Our Story -->
  <section class="our-story">
    <div class="container">
      <div class="story-content">
        <div class="story-text">
          <h2>Our Story</h2>
          <p>
            Date Night Restaurants was born from a simple observation: finding the perfect restaurant for a romantic 
            evening in Los Angeles can be surprisingly difficult. With thousands of dining options across the city, 
            couples often spend more time researching restaurants than actually enjoying their date night.
          </p>
          <p>
            We started by creating a personal list of our favorite romantic spots, but quickly realized that other 
            couples could benefit from our research. What began as a passion project has grown into a comprehensive 
            guide to romantic dining in Los Angeles.
          </p>
          <p>
            Today, we're proud to help thousands of couples discover their new favorite date night destinations, 
            from intimate wine bars in Silver Lake to elegant fine dining in Beverly Hills.
          </p>
        </div>
        <div class="story-image">
          <img src="https://images.unsplash.com/photo-1414235077428-338989a2e8c0?w=600&h=400&fit=crop" alt="Romantic restaurant ambiance" />
        </div>
      </div>
    </div>
  </section>

  <!-- Values -->
  <section class="values">
    <div class="container">
      <h2>Our Values</h2>
      <div class="values-grid">
        <div class="value-card">
          <h3>Authenticity</h3>
          <p>We only recommend restaurants we've personally visited and experienced. No paid placements or fake reviews.</p>
        </div>
        
        <div class="value-card">
          <h3>Quality</h3>
          <p>Every restaurant in our collection meets our high standards for food, service, and romantic atmosphere.</p>
        </div>
        
        <div class="value-card">
          <h3>Transparency</h3>
          <p>We provide honest reviews and ratings to help you make informed decisions about your dining experience.</p>
        </div>
        
        <div class="value-card">
          <h3>Community</h3>
          <p>We believe in supporting local restaurants and helping couples create lasting memories together.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact -->
  <section class="contact">
    <div class="container">
      <div class="contact-content">
        <h2>Get in Touch</h2>
        <p>Have a restaurant recommendation or feedback? We'd love to hear from you!</p>
        <div class="contact-info">
          <div class="contact-item">
            <i class="fas fa-envelope"></i>
            <div>
              <h4>Email Us</h4>
              <p>hello@datenightrestaurants.com</p>
            </div>
          </div>
          
          <div class="contact-item">
            <i class="fas fa-map-marker-alt"></i>
            <div>
              <h4>Location</h4>
              <p>Los Angeles, California</p>
            </div>
          </div>
          
          <div class="contact-item">
            <i class="fas fa-heart"></i>
            <div>
              <h4>Mission</h4>
              <p>Helping couples find perfect date nights</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

