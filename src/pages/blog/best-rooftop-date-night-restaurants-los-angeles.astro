    background: #fff;
  }

  .blog-header {
    background: linear-gradient(135deg, #2C2C2C 0%, #4A4A4A 50%, #D4AF37 100%);
    color: white;
    padding: 120px 0 80px;
    text-align: center;
  }

  .post-meta {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    margin-bottom: 2rem;
    font-size: 0.9rem;
    opacity: 0.9;
  }

  .separator {
    color: #D4AF37;
  }

  .post-category {
    background: #D4AF37;
    color: #2C2C2C;
    padding: 0.25rem 0.75rem;
    border-radius: 15px;
    font-weight: 600;
    font-size: 0.8rem;
  }

  .blog-header h1 {
    font-size: 3.5rem;
    margin-bottom: 1.5rem;
    font-family: 'Playfair Display', serif;
    line-height: 1.2;
  }

  .post-excerpt {
    font-size: 1.3rem;
    opacity: 0.9;
    max-width: 800px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .featured-image {
    width: 100%;
    height: 400px;
    overflow: hidden;
  }

  .featured-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .blog-content {
    padding: 4rem 0;
  }

  .content-wrapper {
    max-width: 800px;
    margin: 0 auto;
    line-height: 1.8;
  }

