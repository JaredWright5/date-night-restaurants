    margin-bottom: 1rem;
    font-size: 1.2rem;
  }
  
  .related-item p {
    color: #666;
    margin: 0;
    font-size: 0.95rem;
  }
  
  @media (max-width: 768px) {
    .post-header h1 {
      font-size: 2.5rem;
    }
    
    .post-meta {
      flex-direction: column;
      gap: 0.5rem;
    }
    
    .restaurants-grid {
      grid-template-columns: 1fr;
    }
    
    .related-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
