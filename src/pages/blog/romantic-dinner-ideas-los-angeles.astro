    position: relative;
    height: 200px;
    overflow: hidden;
  }
  
  .restaurant-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .restaurant-overlay {
    position: absolute;
    top: 1rem;
    right: 1rem;
  }
  
  .date-score {
    background: rgba(0,0,0,0.8);
    color: #D4AF37;
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-weight: 600;
    font-size: 0.9rem;
  }
  
  .restaurant-info {
    padding: 1.5rem;
  }
  
