---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { restaurants } from '@/data/restaurants';

// Filter restaurants in Downtown LA
const downtownRestaurants = restaurants.filter(restaurant => 
  restaurant.area.toLowerCase().includes('downtown') || 
  restaurant.address.toLowerCase().includes('downtown') ||
  restaurant.area.toLowerCase().includes('dtla') ||
  restaurant.address.toLowerCase().includes('dtla')
).sort((a, b) => b.dateNightScore - a.dateNightScore);

const structuredData = {
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  "headline": "Downtown LA Date Night: Urban Romance in the City",
  "description": "Discover the most romantic date night restaurants in Downtown Los Angeles. From rooftop bars to intimate dining rooms, experience urban romance in DTLA's vibrant restaurant scene.",
  "author": {
    "@type": "Person",
    "name": "Date Night Experts"
  },
  "publisher": {
    "@type": "Organization",
    "name": "Date Night Restaurants",
    "logo": {
      "@type": "ImageObject",
      "url": "https://datenightrestaurants.com/logo.png"
    }
  },
  "datePublished": "2024-01-15",
  "dateModified": "2024-01-15",
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": "https://datenightrestaurants.com/blog/downtown-la-date-night-urban-romance/"
  },
  "image": "https://images.unsplash.com/photo-1449824913935-59a10b8d2000?w=1200&h=630&fit=crop"
};
---

<BaseLayout
  title="Downtown LA Date Night: Urban Romance in the City"
  description="Discover the most romantic date night restaurants in Downtown Los Angeles. From rooftop bars to intimate dining rooms, experience urban romance in DTLA's vibrant restaurant scene."
  keywords={['Downtown LA date night', 'DTLA restaurants', 'urban romance Los Angeles', 'downtown LA dining', 'city date night LA']}
  canonical="https://datenightrestaurants.com/blog/downtown-la-date-night-urban-romance/"
  structuredData={structuredData}
>
  <article class="blog-post">
    <header class="post-header">
      <div class="container">
        <div class="breadcrumb">
          <a href="/">Home</a> / 
          <a href="/blog/">Blog</a> / 
          <span>Downtown LA Date Night Guide</span>
        </div>
        
        <h1>Downtown LA Date Night: Urban Romance in the City</h1>
        
        <div class="post-meta">
          <time datetime="2024-01-15">January 15, 2024</time>
          <span class="author">by Date Night Experts</span>
          <span class="category">Downtown LA Dining</span>
        </div>
        
        <div class="post-excerpt">
          <p>Experience the energy and romance of Downtown Los Angeles. From sky-high rooftop bars to intimate speakeasies, discover the perfect urban date night in DTLA's dynamic restaurant scene.</p>
        </div>
      </div>
    </header>

