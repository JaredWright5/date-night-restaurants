import BaseLayout from '@/layouts/BaseLayout.astro';
import { getAllRestaurants } from '@/lib/supabase';

// Get restaurants from Supabase
let restaurants;
try {
  restaurants = await getAllRestaurants();
} catch (error) {
  console.error('Error fetching restaurants:', error);
  return new Response('Database connection failed. Please check your Supabase configuration.', { status: 500 });
}

// Filter for Downtown LA restaurants
const downtownRestaurants = restaurants.filter(r => r.neighborhood === 'Downtown LA');
const topRestaurants = downtownRestaurants
  .sort((a, b) => b.date_night_score - a.date_night_score)
  .slice(0, 6);

// Calculate stats
const avgDateScore = Math.round(downtownRestaurants.reduce((sum, r) => sum + r.date_night_score, 0) / downtownRestaurants.length);
const upscaleCount = downtownRestaurants.filter(r => r.price_level >= 3).length;
const cuisineTypes = [...new Set(downtownRestaurants.flatMap(r => r.cuisine_types))];

