    margin: 0 0 1rem;
    color: #2C2C2C;
    font-size: 1.3rem;
  }

  .related-posts ul {
    list-style: none;
    padding: 0;
  }

  .related-posts li {
    margin-bottom: 0.75rem;
  }

  .related-posts a {
    color: #555;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .related-posts a:hover {
    color: #D4AF37;
  }

  .newsletter-signup {
    margin-top: 2rem;
    padding-top: 2rem;
    border-top: 1px solid #ddd;
  }

  .newsletter-form {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .newsletter-form input {
    padding: 0.75rem;
    border: 1px solid #ddd;
    border-radius: 5px;
    font-size: 0.9rem;
  }

  .newsletter-form button {
    padding: 0.75rem;
    background: #D4AF37;
    color: white;
    border: none;
    border-radius: 5px;
    font-weight: 600;
    cursor: pointer;
  }

  @media (max-width: 768px) {
    .content-wrapper {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .post-header h1 {
      font-size: 2.2rem;
    }

    .restaurant-header {
      flex-direction: column;
      gap: 1rem;
    }

    .restaurant-actions {
      flex-direction: column;
    }

    .tips-grid {
      grid-template-columns: 1fr;
    }

    .neighborhoods {
      grid-template-columns: 1fr;
    }
  }
</style>
