---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { getAllRestaurants } from '@/lib/supabase';

// Get restaurants from Supabase
let restaurants;
try {
  restaurants = await getAllRestaurants();
} catch (error) {
  console.error('Error fetching restaurants:', error);
  return new Response('Database connection failed. Please check your Supabase configuration.', { status: 500 });
}

// Filter for Silver Lake restaurants
const silverLakeRestaurants = restaurants.filter(r => r.neighborhood === 'Silver Lake');
const topRestaurants = silverLakeRestaurants
  .sort((a, b) => b.date_night_score - a.date_night_score)
  .slice(0, Math.min(6, silverLakeRestaurants.length));

// Calculate stats
const avgDateScore = Math.round(silverLakeRestaurants.reduce((sum, r) => sum + r.date_night_score, 0) / silverLakeRestaurants.length);
const upscaleCount = silverLakeRestaurants.filter(r => r.price_level >= 3).length;
const cuisineTypes = [...new Set(silverLakeRestaurants.flatMap(r => r.cuisine_types))];

const structuredData = {
  "@context": "https://schema.org",
  "@type": "Article",
  "headline": `Best Date Night Restaurants in Silver Lake | ${silverLakeRestaurants.length} Romantic Dining Spots`,
  "description": `Discover the best date night restaurants in Silver Lake, Los Angeles. From hip neighborhood bistros to trendy eateries, explore ${silverLakeRestaurants.length} romantic restaurants perfect for couples.`,
  "author": {
    "@type": "Organization",
    "name": "Date Night Restaurants"
  },
  "publisher": {
    "@type": "Organization",
    "name": "Date Night Restaurants",
    "logo": {
      "@type": "ImageObject",
      "url": "https://datenightrestaurants.com/logo.png"
    }
  },
  "datePublished": "2025-11-12",
  "dateModified": "2025-11-12",
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": "https://datenightrestaurants.com/blog/best-date-night-restaurants-silver-lake-los-angeles"
  },
  "image": "https://images.unsplash.com/photo-1555396273-367ea4eb4db5?w=1200&h=800&fit=crop"
};
---

<BaseLayout
  title={`Best Date Night Restaurants in Silver Lake | ${silverLakeRestaurants.length} Romantic Dining Spots`}
  description={`Discover the best date night restaurants in Silver Lake, Los Angeles. From hip neighborhood bistros to trendy eateries, explore ${silverLakeRestaurants.length} romantic restaurants perfect for couples.`}
  canonical="https://datenightrestaurants.com/blog/best-date-night-restaurants-silver-lake-los-angeles"
  keywords={['date night restaurants Silver Lake', 'romantic dining Silver Lake', 'couples restaurants Silver Lake', 'Silver Lake restaurants', 'hip restaurants Silver Lake', 'trendy dining Silver Lake']}
  structuredData={structuredData}
