  restaurant.amenities?.includes('patio') ||
  restaurant.area.toLowerCase().includes('beach') ||
  restaurant.area.toLowerCase().includes('santa monica') ||
  restaurant.area.toLowerCase().includes('venice') ||
  restaurant.area.toLowerCase().includes('malibu')
).sort((a, b) => b.dateNightScore - a.dateNightScore);

