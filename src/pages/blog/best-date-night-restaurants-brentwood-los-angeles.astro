---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { getAllRestaurants } from '@/lib/supabase';

// Get restaurants from Supabase
let restaurants;
try {
  restaurants = await getAllRestaurants();
} catch (error) {
  console.error('Error fetching restaurants:', error);
  return new Response('Database connection failed. Please check your Supabase configuration.', { status: 500 });
}

// Filter for Brentwood restaurants
const brentwoodRestaurants = restaurants.filter(r => r.neighborhood === 'Brentwood');
const topRestaurants = brentwoodRestaurants
  .sort((a, b) => b.date_night_score - a.date_night_score)
  .slice(0, 4); // Brentwood has 4 restaurants

// Calculate stats
const avgDateScore = Math.round(brentwoodRestaurants.reduce((sum, r) => sum + r.date_night_score, 0) / brentwoodRestaurants.length);
const upscaleCount = brentwoodRestaurants.filter(r => r.price_level >= 3).length;
const cuisineTypes = [...new Set(brentwoodRestaurants.flatMap(r => r.cuisine_types))];

const structuredData = {
  "@context": "https://schema.org",
  "@type": "Article",
  "headline": "Best Date Night Restaurants in Brentwood | 4 Exclusive Romantic Dining Spots",
  "description": "Discover the best date night restaurants in Brentwood, Los Angeles. Explore 4 exclusive romantic dining spots in this upscale neighborhood perfect for couples.",
  "author": {
    "@type": "Organization",
    "name": "Date Night Restaurants"
  },
  "publisher": {
    "@type": "Organization",
    "name": "Date Night Restaurants",
    "logo": {
      "@type": "ImageObject",
      "url": "https://datenightrestaurants.com/logo.png"
    }
  },
  "datePublished": "2025-10-29",
  "dateModified": "2025-10-29",
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": "https://datenightrestaurants.com/blog/best-date-night-restaurants-brentwood-los-angeles"
  },
  "image": "https://images.unsplash.com/photo-1555396273-367ea4eb4db5?w=1200&h=800&fit=crop"
};
---

<BaseLayout
  title="Best Date Night Restaurants in Brentwood | 4 Exclusive Romantic Dining Spots"
  description="Discover the best date night restaurants in Brentwood, Los Angeles. Explore 4 exclusive romantic dining spots in this upscale neighborhood perfect for couples."
  canonical="https://datenightrestaurants.com/blog/best-date-night-restaurants-brentwood-los-angeles"
  keywords={['date night restaurants Brentwood', 'romantic dining Brentwood', 'couples restaurants Brentwood', 'Brentwood restaurants', 'upscale dining Brentwood', 'fine dining Brentwood']}
  structuredData={structuredData}
