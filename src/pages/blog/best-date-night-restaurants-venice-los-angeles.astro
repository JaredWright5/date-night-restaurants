---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { getAllRestaurants } from '@/lib/supabase';

// Get restaurants from Supabase
let restaurants;
try {
  restaurants = await getAllRestaurants();
} catch (error) {
  console.error('Error fetching restaurants:', error);
  return new Response('Database connection failed. Please check your Supabase configuration.', { status: 500 });
}

// Filter for Venice restaurants
const veniceRestaurants = restaurants.filter(r => r.neighborhood === 'Venice');
const topRestaurants = veniceRestaurants
  .sort((a, b) => b.date_night_score - a.date_night_score)
  .slice(0, 6);

// Calculate stats
const avgDateScore = Math.round(veniceRestaurants.reduce((sum, r) => sum + r.date_night_score, 0) / veniceRestaurants.length);
const upscaleCount = veniceRestaurants.filter(r => r.price_level >= 3).length;
const cuisineTypes = [...new Set(veniceRestaurants.flatMap(r => r.cuisine_types))];

const structuredData = {
  "@context": "https://schema.org",
  "@type": "Article",
  "headline": "Best Date Night Restaurants in Venice | 13 Romantic Dining Spots",
  "description": "Discover the best date night restaurants in Venice, Los Angeles. From beachfront dining to cozy neighborhood spots, explore 13 romantic restaurants perfect for couples.",
  "author": {
    "@type": "Organization",
    "name": "Date Night Restaurants"
  },
  "publisher": {
    "@type": "Organization",
    "name": "Date Night Restaurants",
    "logo": {
      "@type": "ImageObject",
      "url": "https://datenightrestaurants.com/logo.png"
    }
  },
  "datePublished": "2025-10-15",
  "dateModified": "2025-10-15",
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": "https://datenightrestaurants.com/blog/best-date-night-restaurants-venice-los-angeles"
  },
  "image": "https://images.unsplash.com/photo-1541802588704-03f5c855ff15?w=1200&h=800&fit=crop"
};
---

<BaseLayout
  title="Best Date Night Restaurants in Venice | 13 Romantic Dining Spots"
  description="Discover the best date night restaurants in Venice, Los Angeles. From beachfront dining to cozy neighborhood spots, explore 13 romantic restaurants perfect for couples."
  canonical="https://datenightrestaurants.com/blog/best-date-night-restaurants-venice-los-angeles"
  keywords={['date night restaurants Venice', 'romantic dining Venice', 'couples restaurants Venice', 'Venice restaurants', 'beachfront dining Venice', 'Venice Beach restaurants']}
  structuredData={structuredData}
