  },
  "publisher": {
    "@type": "Organization",
    "name": "Date Night Restaurants",
    "logo": {
      "@type": "ImageObject",
      "url": "https://datenightrestaurants.com/logo.png"
    }
  },
  "datePublished": "2024-01-15",
  "dateModified": "2024-01-15",
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": "https://datenightrestaurants.com/blog/budget-friendly-date-night-restaurants-los-angeles/"
  },
  "image": "https://images.unsplash.com/photo-1555396273-367ea4eb4db5?w=1200&h=630&fit=crop"
