---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { restaurants } from '@/data/restaurants';

// Select budget-friendly restaurants ($ and $$)
const budgetRestaurants = restaurants.filter(r => 
  r.priceLevel <= 2 && r.rating >= 4.0
).slice(0, 15);

const postDate = "2024-10-16";
const author = "Date Night Experts";

const structuredData = {
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  "headline": "Budget-Friendly Date Night Restaurants in Los Angeles Under $50",
  "description": "Discover amazing date night restaurants in LA that won't break the bank. These romantic spots offer excellent food and ambiance for under $50 per person.",
  "image": "https://images.unsplash.com/photo-1414235077428-338989a2e8c0?w=1200&h=630&fit=crop",
  "datePublished": postDate,
  "dateModified": postDate,
  "author": {
    "@type": "Organization",
    "name": author
  }
