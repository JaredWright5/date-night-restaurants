import BaseLayout from '@/layouts/BaseLayout.astro';
import { getAllRestaurants } from '@/lib/supabase';

// Get restaurants from Supabase
let restaurants;
try {
  restaurants = await getAllRestaurants();
} catch (error) {
  console.error('Error fetching restaurants:', error);
  return new Response('Database connection failed. Please check your Supabase configuration.', { status: 500 });
}

// Filter for Santa Monica restaurants
const santaMonicaRestaurants = restaurants.filter(r => r.neighborhood === 'Santa Monica');
const topRestaurants = santaMonicaRestaurants
  .sort((a, b) => b.date_night_score - a.date_night_score)
  .slice(0, 6);

// Calculate stats
const avgDateScore = Math.round(santaMonicaRestaurants.reduce((sum, r) => sum + r.date_night_score, 0) / santaMonicaRestaurants.length);
const upscaleCount = santaMonicaRestaurants.filter(r => r.price_level >= 3).length;
const cuisineTypes = [...new Set(santaMonicaRestaurants.flatMap(r => r.cuisine_types))];

const structuredData = {
  "@context": "https://schema.org",
  "@type": "Article",
  "headline": "Best Date Night Restaurants in Santa Monica | 15 Oceanfront Romantic Dining Spots",
  "description": "Discover the best date night restaurants in Santa Monica, Los Angeles. From oceanfront dining to cozy bistros, explore 15 romantic restaurants perfect for couples.",
  "author": {
    "@type": "Organization",
    "name": "Date Night Restaurants"
  },
  "publisher": {
    "@type": "Organization",
    "name": "Date Night Restaurants",
    "logo": {
      "@type": "ImageObject",
      "url": "https://datenightrestaurants.com/logo.png"
    }
  },
  "datePublished": "2024-10-27",
  "dateModified": "2024-10-27",
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": "https://datenightrestaurants.com/blog/best-date-night-restaurants-santa-monica-los-angeles"
  },
  "image": "https://datenightrestaurants.com/images/santa-monica-date-night.jpg"
};
