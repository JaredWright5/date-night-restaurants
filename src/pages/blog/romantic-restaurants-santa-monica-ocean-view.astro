    margin: 0 0 1rem;
    font-size: 1.2rem;
    color: #2C2C2C;
  }

  .areas-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin: 2rem 0;
  }

  .area-card {
    background: #F0F8FF;
    padding: 1.5rem;
    border-radius: 10px;
    border-left: 4px solid #87CEEB;
  }

  .area-card h3 {
    margin: 0 0 1rem;
    color: #2C2C2C;
  }

  .area-card ul {
    margin: 1rem 0 0;
    padding-left: 1.5rem;
  }

  .area-card li {
    margin-bottom: 0.5rem;
    color: #666;
  }

  .seasons {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin: 2rem 0;
  }

  .season {
    background: #F0F8FF;
    padding: 1.5rem;
    border-radius: 10px;
    border-left: 4px solid #87CEEB;
  }

  .season h3 {
    margin: 0 0 1rem;
    color: #2C2C2C;
  }

  .sidebar {
    background: #F0F8FF;
    padding: 2rem;
    border-radius: 15px;
    height: fit-content;
    position: sticky;
    top: 2rem;
  }

  .sidebar h3 {
    margin: 0 0 1rem;
    color: #2C2C2C;
    font-size: 1.3rem;
  }

  .related-posts ul {
    list-style: none;
    padding: 0;
  }

  .related-posts li {
    margin-bottom: 0.75rem;
  }

  .related-posts a {
    color: #555;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .related-posts a:hover {
    color: #87CEEB;
  }

  .newsletter-signup {
    margin-top: 2rem;
    padding-top: 2rem;
    border-top: 1px solid #ddd;
  }

  .newsletter-form {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .newsletter-form input {
    padding: 0.75rem;
    border: 1px solid #ddd;
    border-radius: 5px;
    font-size: 0.9rem;
  }

  .newsletter-form button {
    padding: 0.75rem;
    background: #87CEEB;
    color: white;
    border: none;
    border-radius: 5px;
    font-weight: 600;
    cursor: pointer;
  }

  @media (max-width: 768px) {
    .content-wrapper {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .post-header h1 {
      font-size: 2.2rem;
    }

    .restaurant-header {
      flex-direction: column;
      gap: 1rem;
    }

    .restaurant-actions {
      flex-direction: column;
    }

    .timing-grid {
      grid-template-columns: 1fr;
    }

