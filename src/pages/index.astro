---
import BaseLayout from '@/layouts/BaseLayout.astro';
import RestaurantCard from '@/components/RestaurantCard.astro';
import { getAllRestaurants } from '@/lib/supabase';

// Get featured restaurants (top 6 by date score)
let allRestaurants, featuredRestaurants;
try {
  allRestaurants = await getAllRestaurants();
  featuredRestaurants = allRestaurants.slice(0, 6);
} catch (error) {
  console.error('Error fetching restaurants:', error);
  // Return 500 error page
  return new Response('Database connection failed. Please check your Supabase configuration.', { status: 500 });
}

// Get unique neighborhoods for the homepage
const neighborhoods = Array.from(new Set(allRestaurants.map(r => r.neighborhood))).slice(0, 8);

// Structured data for homepage
const structuredData = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": "Date Night Restaurants",
  "description": "Discover the best romantic date night restaurants. Find perfect dining spots for couples, anniversaries, and special occasions.",
  "url": "https://datenightrestaurants.com",
  "potentialAction": {
    "@type": "SearchAction",
    "target": "https://datenightrestaurants.com/restaurants/?search={search_term_string}",
    "query-input": "required name=search_term_string"
  },
  "mainEntity": {
    "@type": "ItemList",
    "numberOfItems": featuredRestaurants.length,
    "itemListElement": featuredRestaurants.map((restaurant, index) => ({
      "@type": "ListItem",
      "position": index + 1,
      "item": {
        "@type": "Restaurant",
        "name": restaurant.name,
        "url": `https://datenightrestaurants.com/restaurants/${restaurant.neighborhood_slug}/${restaurant.slug}/`,
        "address": {
          "@type": "PostalAddress",
          "streetAddress": restaurant.address,
          "addressLocality": restaurant.neighborhood,
          "addressRegion": "CA",
          "addressCountry": "US"
        },
        "aggregateRating": {
          "@type": "AggregateRating",
          "ratingValue": restaurant.rating,
          "reviewCount": 0
        }
      }
    }))
  }
};
---

<BaseLayout
  title="Date Night Restaurants | Find Your Perfect Romantic Dining Spot"
  description="Discover the best romantic date night restaurants. Find perfect dining spots for couples, anniversaries, and special occasions with our curated selection."
  canonical="https://datenightrestaurants.com/"
  keywords={['date night restaurants', 'romantic dining', 'couples restaurants', 'fine dining', 'romantic restaurants', 'date night ideas']}
  structuredData={structuredData}
>
  <div class="homepage">
    <!-- Hero Section -->
    <section class="hero">
      <div class="container">
        <div class="hero-content">
          <h1>Find Your Perfect Date Night Restaurant</h1>
          <p class="hero-description">
            Discover romantic dining experiences curated for couples. From intimate bistros to fine dining establishments, 
            find the perfect spot for your special evening.
          </p>
          
          <!-- Search Form -->
          <form class="search-form" id="searchForm">
            <div class="search-input-group">
              <input 
                type="text" 
                id="searchInput" 
                placeholder="Search restaurants, cuisines, or neighborhoods..."
                class="search-input"
              />
              <button type="submit" class="search-button">
                <i class="fas fa-search"></i>
                Search
              </button>
            </div>
          </form>
          
          <!-- Quick Stats -->
          <div class="quick-stats">
            <div class="stat">
              <span class="stat-number">{allRestaurants.length}+</span>
              <span class="stat-label">Restaurants</span>
            </div>
            <div class="stat">
              <span class="stat-number">{neighborhoods.length}+</span>
              <span class="stat-label">Neighborhoods</span>
            </div>
            <div class="stat">
              <span class="stat-number">95+</span>
              <span class="stat-label">Average Date Score</span>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Featured Restaurants -->
    <section class="featured-restaurants">
      <div class="container">
        <div class="section-header">
          <h2>Featured Date Night Restaurants</h2>
          <p>Hand-picked romantic dining experiences perfect for couples</p>
        </div>
        
        <div class="restaurants-grid">
          {featuredRestaurants.map(restaurant => (
            <RestaurantCard restaurant={restaurant} />
          ))}
        </div>
        
        <div class="section-footer">
          <a href="/restaurants/" class="btn btn-primary">
            View All Restaurants
            <i class="fas fa-arrow-right"></i>
          </a>
        </div>
      </div>
    </section>

    <!-- Neighborhoods Section -->
    <section class="neighborhoods-section">
      <div class="container">
        <div class="section-header">
          <h2>Explore by Neighborhood</h2>
          <p>Discover romantic dining experiences in your favorite areas</p>
        </div>
        
        <div class="neighborhoods-grid">
          {neighborhoods.map(neighborhood => {
            const neighborhoodRestaurants = allRestaurants.filter(r => r.neighborhood === neighborhood);
            return (
              <div class="neighborhood-card">
                <div class="neighborhood-info">
                  <h3>{neighborhood}</h3>
                  <p>{neighborhoodRestaurants.length} restaurants</p>
                </div>
                <a href={`/restaurants/${neighborhood.toLowerCase().replace(/\s+/g, '-')}/`} class="neighborhood-link">
                  <i class="fas fa-arrow-right"></i>
                </a>
              </div>
            );
          })}
        </div>
        
        <div class="section-footer">
          <a href="/restaurants/" class="btn btn-secondary">
            View All Neighborhoods
          </a>
        </div>
      </div>
    </section>

    <!-- Features Section -->
    <section class="features-section">
      <div class="container">
        <div class="section-header">
          <h2>Why Choose Date Night Restaurants?</h2>
          <p>We make finding the perfect romantic dining experience effortless</p>
        </div>
        
        <div class="features-grid">
          <div class="feature-card">
            <div class="feature-icon">
              <i class="fas fa-heart"></i>
            </div>
            <h3>Curated for Romance</h3>
            <p>Every restaurant is carefully selected for its romantic ambiance and perfect date night atmosphere.</p>
          </div>
          
          <div class="feature-card">
            <div class="feature-icon">
              <i class="fas fa-star"></i>
            </div>
            <h3>Date Score Rating</h3>
            <p>Our proprietary Date Score helps you find restaurants that are perfect for romantic occasions.</p>
          </div>
          
          <div class="feature-card">
            <div class="feature-icon">
              <i class="fas fa-map-marker-alt"></i>
            </div>
            <h3>Neighborhood Focused</h3>
            <p>Discover romantic dining options in your favorite neighborhoods across the city.</p>
          </div>
          
          <div class="feature-card">
            <div class="feature-icon">
              <i class="fas fa-utensils"></i>
            </div>
            <h3>Diverse Cuisines</h3>
            <p>From intimate bistros to fine dining, find the perfect cuisine for your romantic evening.</p>
          </div>
        </div>
      </div>
    </section>
  </div>
</BaseLayout>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const searchForm = document.getElementById('searchForm');
    const searchInput = document.getElementById('searchInput');

    searchForm.addEventListener('submit', function(event) {
      event.preventDefault();
      const query = searchInput.value.trim();
      if (!query) {
        // If no search query, redirect to restaurants page
        window.location.href = '/restaurants/';
        return;
      }
      
      // Redirect to restaurants page with search query
      window.location.href = `/restaurants/?search=${encodeURIComponent(query)}`;
    });
  });
</script>

<style>
  .homepage {
    min-height: 100vh;
  }

  .hero {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    padding: 6rem 0;
    text-align: center;
  }

  .hero-content {
    max-width: 800px;
    margin: 0 auto;
  }

  .hero h1 {
    font-size: 3.5rem;
    font-weight: 700;
    margin-bottom: 1.5rem;
    line-height: 1.2;
  }

  .hero-description {
    font-size: 1.3rem;
    margin-bottom: 3rem;
    opacity: 0.9;
    line-height: 1.6;
  }

  .search-form {
    margin-bottom: 3rem;
  }

  .search-input-group {
    display: flex;
    max-width: 600px;
    margin: 0 auto;
    background: white;
    border-radius: 50px;
    overflow: hidden;
    box-shadow: 0 10px 30px rgba(0,0,0,0.2);
  }

  .search-input {
    flex: 1;
    padding: 1rem 1.5rem;
    border: none;
    outline: none;
    font-size: 1.1rem;
    color: #2c3e50;
  }

  .search-input::placeholder {
    color: #6c757d;
  }

  .search-button {
    background: #e74c3c;
    color: white;
    border: none;
    padding: 1rem 2rem;
    font-size: 1.1rem;
    font-weight: 600;
    cursor: pointer;
    transition: background-color 0.3s ease;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .search-button:hover {
    background: #c0392b;
  }

  .quick-stats {
    display: flex;
    justify-content: center;
    gap: 3rem;
    flex-wrap: wrap;
  }

  .stat {
    text-align: center;
  }

  .stat-number {
    display: block;
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
  }

  .stat-label {
    font-size: 1.1rem;
    opacity: 0.9;
  }

  .featured-restaurants {
    padding: 6rem 0;
    background: #f8f9fa;
  }

  .neighborhoods-section {
    padding: 6rem 0;
    background: white;
  }

  .features-section {
    padding: 6rem 0;
    background: #f8f9fa;
  }

  .section-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .section-header h2 {
    font-size: 2.5rem;
    color: #2c3e50;
    margin-bottom: 1rem;
  }

  .section-header p {
    font-size: 1.2rem;
    color: #6c757d;
    max-width: 600px;
    margin: 0 auto;
  }

  .restaurants-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .neighborhoods-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
    margin-bottom: 3rem;
  }

  .neighborhood-card {
    background: white;
    border: 2px solid #e9ecef;
    border-radius: 12px;
    padding: 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    transition: all 0.3s ease;
    cursor: pointer;
  }

  .neighborhood-card:hover {
    border-color: #e74c3c;
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0,0,0,0.1);
  }

  .neighborhood-info h3 {
    color: #2c3e50;
    margin-bottom: 0.5rem;
    font-size: 1.2rem;
  }

  .neighborhood-info p {
    color: #6c757d;
    margin: 0;
  }

  .neighborhood-link {
    color: #e74c3c;
    font-size: 1.2rem;
    transition: transform 0.3s ease;
  }

  .neighborhood-card:hover .neighborhood-link {
    transform: translateX(4px);
  }

  .features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }

  .feature-card {
    background: white;
    padding: 2rem;
    border-radius: 12px;
    text-align: center;
    box-shadow: 0 4px 20px rgba(0,0,0,0.1);
    transition: transform 0.3s ease;
  }

  .feature-card:hover {
    transform: translateY(-4px);
  }

  .feature-icon {
    width: 80px;
    height: 80px;
    background: linear-gradient(135deg, #e74c3c, #c0392b);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1.5rem;
    color: white;
    font-size: 2rem;
  }

  .feature-card h3 {
    color: #2c3e50;
    margin-bottom: 1rem;
    font-size: 1.3rem;
  }

  .feature-card p {
    color: #6c757d;
    line-height: 1.6;
  }

  .section-footer {
    text-align: center;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 1rem 2rem;
    background: #e74c3c;
    color: white;
    text-decoration: none;
    border-radius: 50px;
    font-weight: 600;
    font-size: 1.1rem;
    transition: all 0.3s ease;
  }

  .btn:hover {
    background: #c0392b;
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(231, 76, 60, 0.3);
  }

  .btn-secondary {
    background: #6c757d;
  }

  .btn-secondary:hover {
    background: #5a6268;
  }

  @media (max-width: 768px) {
    .hero h1 {
      font-size: 2.5rem;
    }
    
    .hero-description {
      font-size: 1.1rem;
    }
    
    .search-input-group {
      flex-direction: column;
      border-radius: 12px;
    }
    
    .search-button {
      border-radius: 0 0 12px 12px;
    }
    
    .quick-stats {
      gap: 2rem;
    }
    
    .stat-number {
      font-size: 2rem;
    }
  }
</style>