    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(212, 175, 55, 0.4);
  }
  
  @media (max-width: 768px) {
    .hero-stats {
      flex-direction: column;
      gap: 1.5rem;
    }
    
    .grid {
      grid-template-columns: 1fr;
    }
    
    .neighborhood-header {
      flex-direction: column;
