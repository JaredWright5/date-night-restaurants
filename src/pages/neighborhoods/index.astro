---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { restaurants } from '@/data/restaurants';

// Get unique neighborhoods with restaurant counts
const neighborhoodData = restaurants.reduce((acc, restaurant) => {
  const neighborhood = restaurant.neighborhood;
  if (!acc[neighborhood]) {
    acc[neighborhood] = {
      name: neighborhood,
      count: 0,
      restaurants: []
    };
  }
  acc[neighborhood].count++;
  acc[neighborhood].restaurants.push(restaurant);
  return acc;
}, {});

const neighborhoods = Object.values(neighborhoodData)
  .sort((a, b) => b.count - a.count);

const totalRestaurants = restaurants.length;
const totalNeighborhoods = neighborhoods.length;
---

<BaseLayout 
  title="Los Angeles Neighborhoods | Date Night Restaurants" 
  description="Explore romantic date night restaurants across Los Angeles neighborhoods. Find the perfect dining spot in Beverly Hills, West Hollywood, Santa Monica, and more."
  canonical="https://datenightrestaurants.com/neighborhoods/"
>
  <main class="neighborhoods-page">
    <div class="hero-section">
      <div class="container">
        <h1>Los Angeles Neighborhoods</h1>
        <p class="hero-subtitle">Discover romantic date night restaurants across LA's most popular neighborhoods</p>
        
        <div class="hero-stats">
          <div class="stat">
            <span class="stat-number">{totalNeighborhoods}</span>
            <span class="stat-label">Neighborhoods</span>
          </div>
          <div class="stat">
            <span class="stat-number">{totalRestaurants}</span>
            <span class="stat-label">Restaurants</span>
          </div>
          <div class="stat">
            <span class="stat-number">87</span>
            <span class="stat-label">Avg Date Score</span>
          </div>
        </div>
      </div>
    </div>

    <div class="neighborhoods-grid">
      <div class="container">
        <h2>Explore by Neighborhood</h2>
        <div class="grid">
          {neighborhoods.map(neighborhood => (
            <div class="neighborhood-card">
              <div class="neighborhood-header">
                <h3>{neighborhood.name}</h3>
                <span class="restaurant-count">{neighborhood.count} restaurant{neighborhood.count !== 1 ? 's' : ''}</span>
              </div>
              
              <div class="top-restaurants">
                <h4>Top Date Night Spots</h4>
                <ul>
                  {neighborhood.restaurants
                    .sort((a, b) => b.dateNightScore - a.dateNightScore)
                    .slice(0, 3)
                    .map(restaurant => (
                      <li>
                        <a href={`/losangeles/${restaurant.slug}/`}>
                          <span class="restaurant-name">{restaurant.name}</span>
                          <span class="date-score">{restaurant.dateNightScore}</span>
                        </a>
                      </li>
                    ))}
                </ul>
              </div>
              
              <div class="neighborhood-actions">
                <a href={`/neighborhoods/${neighborhood.name.toLowerCase().replace(/\s+/g, '-')}/restaurants/`} class="btn btn-primary">
                  View All Restaurants
                </a>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </main>
</BaseLayout>

<style>
